/* pages/erocdetails/index.wxss */
.erocdetails {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: scroll;
}
.top {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  width: 100%;
  
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.van-grid-item__icon {
  font-size: 80rpx !important;
}
.center {
  box-sizing: border-box;
}
.time {
  line-height: 66rpx;
  font-size: 34rpx;
  text-align: center;
}
.box {
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 20rpx solid #f2f2f2;
  line-height: 46rpx;
}
.box .boxcenter{
  line-height: 76rpx;
  font-size: 36rpx;
}
.box .boxbottom{
  color: #999;
}
.h3 {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  font-size: 32rpx;
  align-items: center;
  background-color: #fff;
}
.h3 image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  color: #999;
  line-height: 46rpx;
  min-height: 200rpx;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #fff;
}
.top_li {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  color: #333;
}
.top_li view:first-child {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  border: 1rpx solid #16c7ae;
  color: #16c7ae;
  margin-right: 20rpx;
  text-align: center;
}
.center_top {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.center_top .left {
  width: 200rpx;
  display: flex;
  background-color: #fff;
  margin-right: 20rpx;
}
.center_top .left view {
  flex: 1;
  border: 1rpx solid #f2f2f2;
  text-align: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.center_top .left .check {
  background-color: #16c7ae;
  color: #fff;
}
.center_top .right {
  flex: 1;
  border: 1rpx solid #c6c6c6;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
}
.jznav {
  background-color: #fff;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
}
.jznav .nav_li {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: goldenrod;
  border-right: 1rpx solid #f2f2f2;
}
.jznav .nav_li:first-child {
  color: palevioletred;
}
.jznav .nav_li:last-child {
  color: greenyellow;
  border: none;
}
.libox {
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.libox .libox_title {
  font-size: 28rpx;
  display: flex;
}
.libox .libox_title view {
  margin-right: 20rpx;
}
.canvas_box {
  width: 100%;
  display: flex;
  justify-content: center;
}
.canvas {
    width: 600rpx;
    height: 600rpx;
}
.title{
  
}
.popup_title {
  padding: 20rpx;
  box-sizing: border-box;
}
.popup_box {
  overflow-x: auto;
  margin-top: 40rpx;
}
.popup_box .li {
  width: 1400rpx;
  height: 46rpx;
  display: flex;
}
.popup_box .li view {
  flex: 1;
  height: 46rpx;
  line-height: 46rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  white-space:nowrap;
  background-color: #f2f2f2;
}