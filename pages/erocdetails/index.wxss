/* pages/erocdetails/index.wxss */
.erocdetails {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  width: 100%;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.van-grid-item__icon {
  font-size: 80rpx !important;
}
.center {
  padding-top: 100rpx;
  box-sizing: border-box;
}
.time {
  line-height: 66rpx;
  font-size: 34rpx;
  text-align: center;
}
.box {
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 20rpx solid #f2f2f2;
  line-height: 46rpx;
}
.box .boxcenter{
  line-height: 76rpx;
  font-size: 36rpx;
}
.box .boxbottom{
  color: #999;
}
.h3 {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  font-size: 32rpx;
  align-items: center;
}
.h3 image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  color: #999;
  line-height: 46rpx;
  min-height: 200rpx;
  border-bottom: 1rpx solid #f2f2f2;
}