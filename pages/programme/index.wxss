/* pages/programme/index.wxss */
.programme {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.center {
  /* margin-bottom: 100rpx; */
  background-color: #fff;
}
.box {
  display: flex;
}
.box .libox {
  flex: 1;
}
.box .list {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #f2f2f2;
}
.box .list .title {
  font-size: 36rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.box .list .text {
  font-size: 28rpx;
  color: #999;
  display: flex;
}
.box .list .money {
  color: #eb4921;
  font-size: 32rpx;
  margin-left: 10rpx;
}
.box .list .num {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
}
.box .list .num view {
  margin-left: 10rpx;
  margin-right: 10rpx;
}
van-sidebar {
  /* width: 160rpx; */
  height: 80vh;
  overflow: auto;
}
.bottom_btn {
  width: 100%;
  height: 86rpx;
  display: flex;
  background-color: #fff;
}
.bottom_btn .bottom_num{
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: flex-start;
}
.bottom_btn .bottom_num view {
  color: #eb4921;
}
.bottom_btn .van-icon {
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom_btn view {
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom_btn .next {
  width: 220rpx;
  background-color: #16c7ae;
  color: #fff;
}
.li {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.li view:first-child {
  flex: 1;
}
.li .text {
  font-size: 28rpx;
}
.li .money {
  color: #eb4921;
  margin-right: 20rpx;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}