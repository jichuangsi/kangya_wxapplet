/* pages/chat/index.wxss */
.chat {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae !important;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.top_right {
  position: fixed;
  top: 10rpx;
  right: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
}
.center {
  padding: 100rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.center_bottom {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
  opacity: 0.9;
  z-index: 9;
}
.center_bottom input {
  flex: 1;
  background-color: #c9c9c9;
  line-height: 66rpx;
  height: 66rpx;
  padding: 0rpx 10rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
}
.center_bottom .btn {
  background-color: #0094ff;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  color: #fff;
  border-radius: 2rpx;
}
.center {
  width: 100%;
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 100rpx 20rpx;
  overflow: auto;
}
.center .li {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.center .li_left{
  
}
.center .li .user_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.center .li .user_img image {
  width: 100%;
  height: 100%;
}
.center .li .user_text {
  flex: 1;
  margin-left: 20rpx;
  line-height: 46rpx;
  font-size: 28rpx;
}
.center .li .user_text .text{
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: inline-block;
  position: relative;
  margin-top: 20rpx;
  border-radius: 5rpx;
  max-width: 600rpx;
}
.center .li .user_text .text image {
  max-width: 50%;
}
.center .li .user_text .text .dian {
  border: 20rpx solid #fff;
  border-color: #fff #fff transparent transparent;
  position: absolute;
  top: 20rpx;
  left: -20rpx;
}