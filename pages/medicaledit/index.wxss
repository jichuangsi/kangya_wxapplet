.center {
  padding-bottom: 120rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.box {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}
.box .text {
  flex: 1;
  margin-left: 20rpx;
}
.boxli {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.boxli .time{
  font-size: 56rpx;
  line-height: 76rpx;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.box_li {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.box_li view {
  margin-left: 20rpx;
  border: 1rpx solid #333;
  color: #333;
  padding: 10rpx 60rpx;
  box-sizing: border-box;
  border-radius: 46rpx;
}
.box_li .check{
  border: 1rpx solid #16c7ae;
  color: #16c7ae;
}
.bz {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.box .del {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.box .add {
  display: flex;
  align-items: center;
}
.title {
  background-color: #f2f2f2;
}
.btn {
  width: 100%;
  height: 106rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  border: 20rpx solid #fff;
  background-color: #16c7ae;
  box-sizing: border-box;
  z-index: 9;
}