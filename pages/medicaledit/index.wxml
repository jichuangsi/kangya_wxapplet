      <van-icon name="../../../images/case_icon_programme_defauit.png" />
      <view class="text">牙位</view>
      <view></view>
      <van-icon name="arrow" />
    </view>
    <view class="box" data-text="输入治疗" bindtap="editgo">
      <view class="bz"></view>
    </view>
    <view class="xian"></view>
    <view class="box" data-text="输入医嘱" bindtap="editgo">
      <van-icon name="../../../images/case_icon_programme_defauit.png" />
      <view class="text">医嘱</view>
      <view></view>
      <van-icon name="arrow" />
      <view class="bz"></view>
    </view>
    <view class="xian"></view>
    <view class="box" data-text="影像浏览" bindtap="editgo">
      <van-icon name="../../../images/case_icon_image_defauit.png" />
      <view class="text">影像</view>
      <view></view>
      <van-icon name="arrow" />
    </view>
    <view class="xian"></view>
    <view class="box" bindtap="Colleaguego">
      <van-icon name="../../../images/case_icon_doctor_defauit.png" />
      <view class="text">医生</view>
      <view></view>
      <van-icon name="arrow" />
    </view>
    <view class="box" bindtap="Colleaguego">
      <van-icon name="../../../images/case_icon_nurse_defauit.png" />
      <view class="text">护士</view>
      <view></view>
      <van-icon name="arrow" />
    </view>
    <view class="box" bindtap="showpopup">
      <van-icon name="clock-o" />
      <view class="text">就诊日期</view>
      <view>{{time}}</view>
      <van-icon name="arrow" />
    </view>
  </view>
  <view class="btn" bindtap="btn">完成</view>
  <van-popup show="{{ show }}" bind:close="onClose"
  position="top"
  custom-style="widht: 100%">
    <calendar calendarConfig="{{calendarConfig}}" bind:afterTapDay="afterTapDay"></calendar>
  </van-popup>
</view>
