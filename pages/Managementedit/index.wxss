/* pages/Managementedit/index.wxss */
.Managementedit {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  margin-bottom: 100rpx;
  background-color: #fff;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2;
}
.li .img {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}
.li .name {
  margin-right: 20rpx;
}
.li .state {
  font-size: 28rpx;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  color: #16c7ae;
  border: 1rpx solid #16c7ae;
}
.li .time {
  text-align: right;
  font-size: 28rpx;
}
.li .title {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2;
}
.li .text {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.li .text .van-icon {
  margin-left: 20rpx;
}
.li .money {
  flex: 1;
  justify-content: flex-end;
  display: flex;
}
.li .money view {
  color: #16c7ae;
  margin-right: 20rpx;
}
.li .bz {
  width: 100%;
  font-size: 26rpx;
  color: #bababa;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #bababa;
}
.li .btn {
  width: 50%;
  height: 86rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.li .btn .van-icon {
  margin-right: 20rpx;
}
.li .first {
  flex: 1;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}

.li .title {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.li .title image {
  width: 38rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.li .title .tooth {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
}
.tooth view {
  width: 50%;
  padding: 5rpx;
  height: 46rpx;
  line-height: 46rpx;
  box-sizing: border-box;
  text-align: center;
}
.tooth view:nth-child(1){
  border-bottom: 1rpx solid #f2f2f2;
  border-right: 1rpx solid #f2f2f2;
}
.tooth view:nth-child(4){
  border-top: 1rpx solid #f2f2f2;
  border-left: 1rpx solid #f2f2f2;
}
.li .check_box {
  width: 100%;
  display: flex;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}
.li .check_box .check_li {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.li .check_box .check_li view:first-child {
  color: #16c7ae;
}
.li .check_box .check_li .van-icon {
  color: #333 !important;
  margin-left: 10rpx;
}
.libox {
  width: 100%;
  padding: 0rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}
.libox view {
  flex: 1;
  height: 86rpx;
  line-height: 86rpx;
  background-color: #fff;
  color: #eb2c2c;
}
.libox view:first-child{
  color: #16c7ae;
}
.red {
  color: #eb2c2c;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.imgbox {
  flex: 1;
  display: flex;
  height: 60rpx;
  justify-content: flex-end;
}
.imgbox image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.audiobox {
  margin: 10rpx 0rpx;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.audio {
  background-color: #f8f8f8;
  border: 1rpx solid #ebebeb;
  padding: 10rpx;
  padding-right: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}
.audio:active{
  background-color: #c6c6c6;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}