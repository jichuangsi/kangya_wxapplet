/* pages/S_sort/index.wxss */
.S_sort {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.ipt {
  width: 100%;
  height: 96rpx;
  border: 20rpx solid #fff;
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 10rpx;
  color: #c9c9c9;
  font-size: 24rpx;
}
.ipt .van-icon {
  margin-right: 20rpx;
  color: #333;
}
.center {
  padding: 180rpx 0rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.title {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.van-grid-item__icon {
  font-size: 80rpx !important;
}