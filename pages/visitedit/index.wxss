.center {
  /* padding-top: 100rpx; */
  box-sizing: border-box;
  background-color: #fff;
}

.box {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
}
.box .text {
  flex: 1;
  margin-left: 20rpx;
}
.boxli {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.boxli .time{
  font-size: 56rpx;
  line-height: 76rpx;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.box_li {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.box_li view {
  margin-left: 20rpx;
  border: 1rpx solid #333;
  color: #333;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  border-radius: 46rpx;
}
.box_li .check{
  border: 1rpx solid #16c7ae;
  color: #16c7ae;
}
.bz {
  padding: 20rpx;
  box-sizing: border-box;
}
.btn {
  width: 100%;
  line-height: 86rpx;
  text-align: center;
  background-color: #16c7ae;
  color: #fff;
  margin-top: 20rpx;
}