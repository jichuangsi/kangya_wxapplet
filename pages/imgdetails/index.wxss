/* pages/imgdetails/index.wxss */
.imgdetails {
  width: 100%;
  height: 100vh;
  background-color: #000000;
}
.foot {
  width: 100%;
  height: 102rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #3d3d3d;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.foot .f_left {
  flex: 1;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
}
.foot .f_center {
  flex: 1;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
}
.foot .f_right {
  flex: 1;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
}
swiper {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}
swiper image {
  width: 100%;
}
swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.zt_state {
  width: 100%;
  position: fixed;
  bottom: 102rpx;
  left: 0rpx;
  color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.zt_state .title {
  line-height: 56rpx;
}
.tooth {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.tooth view {
  width: 50%;
  padding: 5rpx;
  height: 46rpx;
  line-height: 46rpx;
  box-sizing: border-box;
  text-align: center;
}
.tooth view:nth-child(1){
  border-bottom: 1rpx solid #3a3a3a;
  border-right: 1rpx solid #3a3a3a;
}
.tooth view:nth-child(4){
  border-top: 1rpx solid #3a3a3a;
  border-left: 1rpx solid #3a3a3a;
}