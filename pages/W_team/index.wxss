/* pages/W_team/index.wxss */
.W_team {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: scroll;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  /* padding-bottom: 150rpx; */
  box-sizing: border-box;
  /* background-color: #fff; */
}
.libox {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.libox .imgbox {
  width: 240rpx;
  max-height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.libox image {
  max-width: 100%;
  max-height: 100%;
}
.libox .box {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  line-height: 46rpx;
}
.libox .box .state {
  padding: 10rpx 20rpx;
  background-color: #16c7ae;
  color: #fff;
  box-sizing: border-box;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  border-radius: 10rpx;
}
.libox .box .name {
  font-size: 38rpx;
}
.libox .box .text {
  margin-top: 50rpx;
}