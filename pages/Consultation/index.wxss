/* pages/Consultation/index.wxss */
.Consultation {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.top_right {
  padding: 20rpx;
  box-sizing: border-box;
  right: 10rpx;
  bottom: 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #ffff;
  border-radius: 10rpx;
  position: fixed;
}
.center {
  /* margin-bottom: 100rpx; */
  background-color: #fff;
}
.libox {
  border-bottom: 20rpx solid #f2f2f2;
}
.li {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}
.li image {
  width: 56rpx;
  height: 56rpx;
}
.li .text {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.li .time {
  margin-right: 20rpx;
  font-size: 28rpx;
} 
.bz {
  width: 100%;
  font-size: 24rpx;
}
.green {
  color: #16c7ae;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}