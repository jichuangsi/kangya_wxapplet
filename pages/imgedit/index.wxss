/* pages/imgedit/index.wxss */
.imgedit {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.xian {
  width: 100%;
  height: 24rpx;
  background-color: #f2f2f2;
}
.tab {
  border: 1rpx solid #f2f2f2;
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 20rpx;
  line-height: 46rpx;
  min-height: 94rpx;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
}
.tab .left {
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.tab .left image {
  width: 76rpx;
}
.tab .left .img_te{
  width: 38rpx;
  padding: 0rpx 20rpx;
}
.tab .w50 {
  width: 50%;
  text-align: left;
}
.tab .right {
  flex: 1;
  padding: 10rpx 20rpx;
  color: #666;
}
.tab_state {
  display: flex;
  justify-content: center;
  align-items: center;
}
.tooth {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.tooth view {
  width: 50%;
  padding: 5rpx;
  height: 46rpx;
  line-height: 46rpx;
  box-sizing: border-box;
  text-align: center;
}
.tooth view:nth-child(1){
  border-bottom: 1rpx solid #f2f2f2;
  border-right: 1rpx solid #f2f2f2;
}
.tooth view:nth-child(4){
  border-top: 1rpx solid #f2f2f2;
  border-left: 1rpx solid #f2f2f2;
}
.bz {
  width: 100%;
  min-height: 88rpx;
  color: #666;
}
.mt {
  padding-top: 20rpx;
}
.bz view {
  text-indent: 2em;
}
.btn {
  margin-top: 20rpx;
  width: 100%;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background-color: #16c7ae;
}