/* pages/prescriptionedit/index.wxss */
.prescriptionedit {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding-top: 100rpx;
  box-sizing: border-box;
}
input{
  background-color: #fff;
  width: 100%;
  height: 86rpx;
  line-height: 66rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
textarea {
  background-color: #fff;
  width: 100%;
  height: 386rpx;
  line-height: 46rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}