/* pages/Schedulingset/index.wxss */
.Schedulingset {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  margin-bottom: 100rpx;
  background-color: #fff;
}
.li {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #fff;
  align-items: center;
}
.li .color {
  width: 28rpx;
  height: 28rpx;
  background-color: #f2f2f2;
  border-radius: 50%;
  margin-right: 20rpx;
}
.li .text{
  flex: 1;
}
.li input {
  flex: 1;
  padding: 0rpx 20rpx;
  text-align: right;
}
.colorbox {
  width: 100%;
}
.colorbox .color_li {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.colorbox .color_li view:first-child {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.hui {
  background-color: #f2f2f2;
}
.red {
  background-color: red;
}
.blue {
  background-color: blue;
}
.yellow {
  background-color: yellow;
}
.green {
  background-color: green;
}