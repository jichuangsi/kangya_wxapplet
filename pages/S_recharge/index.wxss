/* pages/S_recharge/index.wxss */
.S_recharge {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  /* background-color: red; */
}
.center_top {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  line-height: 46rpx;
  background-color: orange;
}
.center_top .first{
  font-size: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.center_top view:first-child .van-icon {
  margin-left: 20rpx;
  vertical-align: middle;
}
.center_top .jy{
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 46rpx;
  border: 1rpx solid #fff;
  line-height: 28rpx;
}
.title {
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.djbox {
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 20rpx auto;
  background-color: #fff;
}
.djbox .dj_title {
  margin-bottom: 20rpx;
}
.djbox .dj_li {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: pink;
  border-radius: 10rpx;
}
.djbox .dj_li .left {
  flex: 1;
  display: flex;
  align-content: center;
  flex-wrap: wrap;
}
.djbox .dj_li .left .state {
  padding: 5rpx 10rpx;
  border: 1rpx solid red;
  color: red;
  border-radius: 5rpx;
}
.djbox .dj_li .left .time {
  font-size: 26rpx;
}
.djbox .dj_li .right {
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
}
.djbox .dj_li .right .btn {
  background-color: red;
  color: #fff;
  border-radius: 36rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
}
.box {
  width: 80%;
  border-radius: 10rpx;
  padding: 40rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: -80rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  background-color: #fff;
}
.box view:first-child {
  font-size: 46rpx;
  line-height: 66rpx;
}
.text_box {
  padding: 20rpx;
  box-sizing: border-box;
}
.title_state {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.title_state view {
  display: inline-block;
  background-color: pink;
  color: red;
}
.title_state view:first-child{
  background-color: red;
  color: #fff;
}
.text {
  line-height: 36rpx;
}
.btn {
  width: 100%;
  line-height: 76rpx;
  background-color: red;
  color: #fff;
  text-align: center;
  margin-bottom: 40rpx;
}
.li {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
  align-items: center;
}
.li .left {
  display: flex;
  flex-direction: column;
}
.li .left .time {
  color: #666;
  font-size: 26rpx;
  line-height: 46rpx;
}
.green {
  color: #16c7ae;
}
.red {
  color: rgb(221, 45, 45);
}