/* pages/livebroadcast/index.wxss */
livebroadcast {
  height: 100%;
}
livebroadcast swiper {
  width: 96%;
  height: 222rpx;
  margin: 0 auto;
  /* background-color: #0094ff; */
}
livebroadcast swiper swiper-item navigator {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #fff;
}
livebroadcast swiper swiper-item .top_img {
  /* width: 100%; */
  height: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
livebroadcast .nav {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 34rpx;
  box-sizing: border-box;
}
livebroadcast .nav .li {
  width: 324rpx;
  height: 114rpx;
  border-radius: 5rpx;
  margin-bottom: 36rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
livebroadcast .nav .li image {
  width: 100%;
  height: 100%;
}
livebroadcast .nav .li .left {
  flex: 1;
}
livebroadcast .nav .li .left .title {
  font-size: 38rpx;
  line-height: 46rpx;
  color: #fff;
}
livebroadcast .nav .li .left .text {
  font-size: 24rpx;
  line-height: 46rpx;
  color: #e7eceb;
}
livebroadcast .nav .li .right {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
}
livebroadcast .xian {
  width: 100%;
  height: 24rpx;
  background-color: #f0f0f0;
}
livebroadcast .box {
  box-sizing: border-box;
  width: 100%;
}
livebroadcast .box .title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}
livebroadcast .box .title .h3 {
  font-size: 34rpx;
  font-weight: 600;
  border-left: 5rpx solid #c55856;
  padding-left: 10rpx;
}
livebroadcast .box .title .all {
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
livebroadcast .box swiper {
  width: 90%;
  height: 284rpx;
  background-color: #fff;
}
livebroadcast .box swiper-item {
  padding: 20rpx;
  box-sizing: border-box;
}
livebroadcast .box .smallbox{
  width: 100%;
  border-radius: 5rpx;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 5px 5px 5px 3px rgba(0,0,0,0.1);
  position: relative;
}
livebroadcast .box .smallbox .left {
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
  vertical-align: top;
  position: relative;
}
livebroadcast .box .smallbox .left image {
  width: 100%;
  max-height: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
livebroadcast .box .smallbox .right {
  width: 400rpx;
  height: 100%;
  margin-left: 20rpx;
  display: inline-block;
  vertical-align: top;
}
livebroadcast .box .smallbox .right .smallboxtitle {
  font-size: 36rpx;
  line-height: 56rpx;
  font-weight: 600;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
livebroadcast .box .smallbox .right .smallboxtext {
  font-size: 26rpx;
  line-height: 46rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
livebroadcast .box .smallbox .right .money {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
}
.p1 {
  font-size: 30rpx;
  color: #16c7ae;
}
.p2 {
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}
.p3 {
  font-size: 26rpx;
  color: #e88070;
}
livebroadcast .list {
  margin-bottom: 20rpx;
}
livebroadcast .list .smallbox .left {
  width: 328rpx;
  height: 188rpx;
}
livebroadcast .list .smallbox .right {
  width: 348rpx;
}
livebroadcast .list .smallbox .right .smallboxtitle {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
van-grid .van-grid-item__icon {
  font-size: 80rpx !important;
}
.datanone {
  text-align: center;
  color: #bababa;
  line-height: 56rpx;
  margin-top: 20rpx;
}