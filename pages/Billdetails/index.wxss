/* pages/Billdetails/index.wxss */
.title {
  padding: 20rpx;
  box-sizing: border-box;
}
.top_box {
  display: flex;
  flex-wrap: wrap;
}
.top_box .top_li {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  flex-wrap: wrap;
}
.li .text {
  flex: 1;
}
.li view:last-child {
  margin-left: 20rpx;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.bz {
  width: 100%;
}
.box {
  width: 100%;
  background-color: #f2f2f2;
  display: flex;
  flex-wrap: wrap;
}
.box view {
  padding: 20rpx;
  box-sizing: border-box;
  text-align: center;
  width: 25%;
  border: 1rpx solid #999;
}
.box view:nth-child(2n){
  background-color: #fff;
}
.green {
  color: #35c068;
}
.blue {
  color: #5db7e7;
}
.red {
  color: #ff5a5c;
}