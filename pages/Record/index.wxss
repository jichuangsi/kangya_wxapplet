/* pages/Record/index.wxss */
.Record {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center{

}
.center .list .text{
  padding: 20rpx;
  box-sizing: border-box;
}
.center .list .smallbox {
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
}
.center .list .smallbox .left {
  display: inline-block;
  vertical-align: top;
}
.smallbox navigator:first-child {
  width: 100%;
  display: flex;
  align-items: center;
}
.smallbox navigator:first-child image {
  width: 30rpx;
  height: 30rpx;
}
.smallbox navigator:first-child .title {
  flex: 1;
  margin-left: 20rpx;
}
.smallbox navigator:first-child .text {
  color: #ea2d22;
}
.center .list .smallbox .left image {
  width: 208rpx;
  height: 108rpx;
  display: inline-block;
  vertical-align: top;
}
.study .list .smallbox navigator:first-child {
  align-items: flex-start;
}
.study .list .smallbox .left image {
  height: 148rpx;
}
.center .list .smallbox .right {
  width: 448rpx;
  margin-left: 20rpx;
  display: inline-block;
  vertical-align: top;
}
.center .list .smallbox .right .smallboxtitle {
  font-size: 36rpx;
  line-height: 56rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.center .list .smallbox .right .smallboxtext {
  font-size: 28rpx;
  line-height: 46rpx;
  color: #ccc;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}