/* pages/S_Order/index.wxss */
.S_Order {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}
.libox {
  padding: 20rpx;
  box-sizing: border-box;
}
.li {
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  font-size: 28rpx;
}
van-card {
  width: 100%;
  font-size: 34rpx;
}
.van-card {
  width: 100%;
  font-size: 28rpx !important;
  line-height: 34rpx !important;
}
.right {
  justify-content: flex-end;
  border: none;
  font-size: 32rpx;
}
.right view {
  padding: 5rpx 10rpx;
  /* border: 1rpx solid #333; */
  margin-left: 20rpx;
  font-size: 32rpx;
  background-color: #00aaa4;
  color: #fff;
  box-sizing: border-box;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
van-sticky {
  position: fixed;
  width: 100%;
  z-index: 9;
  top: 0rpx;
  left: 0rpx;
}