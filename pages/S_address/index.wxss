/* pages/S_address/index.wxss */
.S_address {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  /* background-color: red; */
}
.box {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.box .user {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}
.box .user .user_top {
  display: flex;
}
.box .user .user_top view:first-child{
  margin-right: 20rpx;
}
.box .user .user_bottom {
  display: flex;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.box .user .user_bottom .state {
  background-color: red;
  color: #fff;
  padding: 0rpx 5rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  margin-right: 10rpx;
}
.btn {
  width: 100%;
  line-height: 76rpx;
  display: flex;
  justify-content: center;
  background-color: #0094ff;
  color: #fff;
}
.bottom {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}
.li {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
  justify-content: space-between;
}
.li .title {
  width: 200rpx;
}
.li .text {
  flex: 1;
  display: flex;
}
.li .text view {
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  border: 1rpx solid #000;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.li .text .check {
  background-color: red;
  color: #fff;
}
.li input {
  flex: 1;
} 
.mt{
  margin-top: 60rpx;
}