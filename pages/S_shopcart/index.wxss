/* pages/S_shopcart/index.wxss */
.S_shopcart {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.top_title {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.top_title .van-icon {
  margin-right: 20rpx;
  color: #333;
}
.top_title .text {
  flex: 1;
}
.top_title .top_btn {
  color: red;
}
.center {
  padding: 100rpx 20rpx 280rpx 20rpx;
  box-sizing: border-box;
}
.nav {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  background-color: pink;
  color: red;
  margin-bottom: 20rpx;
}
.nav .text {
  flex: 1;
  margin-left: 20rpx;
}
.libox {
  margin-bottom: 20rpx;
}
.libox .title {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  background-color: yellow;
  color: red;
  font-size: 26rpx;
}
.libox .title .text {
  flex: 1;
  margin-left: 20rpx;
  color: #333;
}
.libox .title .state {
  padding: 5rpx 10rpx;
  background-color: orange;
  color: #fff;
  border-radius: 5rpx;
}
.carbox {
  height: 46rpx;
  display: flex;
  justify-content: flex-end;
}
.carbtn {
  width: 120rpx;
  height: 46rpx;
  line-height: 46rpx;
  display: inline-block;
  font-size: 40rpx;
  background-color: #16c7ae;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
}
.carbox .carbtn:first-child{
  background-color: red;
  margin-right: 20rpx;
}
.li {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.li .left {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.van-card {
  background-color: #fff !important;
}
.tag {
  display: inline-block;
  background-color: #f2f2f2;
  padding: 0rpx 10rpx;
}
.hui {
  background-color: #f2f2f2 !important;
}
.del {
  width: 120rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: red;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.bottom_btn {
  display: flex;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0rpx;
  bottom: 90rpx;
}
.bottom_btn .text {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}
.bottom_btn .bottom_btn_left {
  display: flex;
  align-items: center;
}
.bottom_btn .btn{
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: red;
  border-radius: 5rpx;
}
.bottom_btn .bottom_delbtn{
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color: red;
  border: 1rpx solid red;
  border-radius: 5rpx;
}
.Invalid {
  margin-bottom: 20rpx;
}
.Invalid .title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background-color: #fff;
}
.Invalid_text {
  padding: 5rpx 10rpx;
  color: #fff;
  background-color: #999;
  box-sizing: border-box;
  font-size: 24rpx;
}
.alike {
  background-color: #fff;
  border: 1rpx solid red;
  padding: 5rpx 10rpx;
  color: red;
  border-radius: 5rpx;
}
.love {

}
.love .title {
  text-align: center;
  margin: 20rpx;
}
.love .love_libox {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.love .love_li {
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  line-height: 46rpx;
}
.love .love_li image{
  width: 100%;
  height: 240rpx;
  margin-bottom: 20rpx;
}
.love .love_li .text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.love .love_li .money {
  display: flex;
}
.love .love_li .money .new {
  color: red;
}
.love .love_li .money .old {
  color: #999;
  margin-left: 20rpx;
  font-size: 26rpx;
  text-decoration:line-through;
}