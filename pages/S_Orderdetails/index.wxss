}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 0rpx 0rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.center_top {
  width: 100%;
  height: 106rpx;
  background-color: #00aaa4;
  color: #fff;
  display: flex;
  align-items: center;
  text-indent: 40rpx;
}
.wl {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  background-color: rgb(216, 216, 252);
}
.white {
  background-color: #fff;
}
.wl .text {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
