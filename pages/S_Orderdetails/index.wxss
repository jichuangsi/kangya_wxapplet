}
.box {
  margin-top: 20rpx;
  background-color: #fff;
}
.li {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  font-size: 32rpx;
}
.li_list {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  background-color: #fff;
}
van-card {
  width: 100%;
}
.van-card {
  width: 100%;
  font-size: 28rpx !important;
  line-height: 34rpx !important;
}
.right {
  justify-content: flex-end;
  border: none;
}
.bottom view {
  padding: 5rpx 10rpx;
  border: 1rpx solid #333;
  margin-left: 20rpx;
  font-size: 34rpx;
  line-height: 46rpx;
  background-color: #00aaa4;
  color: #fff;
  font-weight: 500;
}
.bottom button {
  font-size: 30rpx;
  line-height: 36rpx;
  border-radius: 0rpx;
  padding: 5rpx 10rpx;
  margin-right: 0rpx;
  font-size: 34rpx;
  background-color: #00aaa4;
  color: #fff;
  font-weight: 500;
}
.van-dialog__button {
