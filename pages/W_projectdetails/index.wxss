/* pages/W_projectdetails/index.wxss */
.center {
  padding-bottom: 108rpx;
}
.project {
  padding: 20rpx;
}
.center .li {
  width: 100%;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 46rpx;
  background-color: #fff;
}
.center .li image {
  width: 100%;
  /* height: 106rpx; */
  background-color: #16c7ae;
}
.center .li .money {
  color: #0094ff;
}
.project_text {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0rpx;
}
.introduce {
  padding: 20rpx;
}
.introduce .title {
  font-size: 36rpx;
  line-height: 46rpx;
}
.introduce .text {
  color: #333;
  line-height: 42rpx;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.btn {
  width: 100%;
  text-align: center;
  line-height: 88rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: #16c7ae;
  border-radius: 10rpx;
  border: 20rpx solid #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx
}