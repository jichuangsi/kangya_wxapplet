}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.top_right {
  padding: 20rpx;
  position: fixed;
  top: 10rpx;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  border-radius: 10rpx;
  z-index: 9;
}
.center {
  /* padding-top: 100rpx; */
  box-sizing: border-box;
  /* background-color: #fff; */
}
.date {
  width: 200rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 56px;
  background-color: #c6c6c6;
  color: #fff;
  margin: 20rpx auto;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 56rpx;
  margin: 20rpx;
  background-color: #fff;
}
.li .time {
  display: flex;
  justify-content: space-between;
  color: #16c7ae;
  border-bottom: 1rpx solid #f2f2f2;
}
.li .time .van-icon {
  color: #333;
}
.li .bz {
  border-top: 1rpx solid #f2f2f2;
}
.li .van-icon {
  margin-right: 20rpx;
}
.wu {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bottom {
  background-color: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  line-height: 76rpx;
  display: flex;
  width: 100%;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.bottom view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.green {
  color: #16c7ae;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.popupbox view {
  padding: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
}