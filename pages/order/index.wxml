            <view class="time text_li">{{item.starttime}}-{{item.starttime}} <view style="color:#7a7a7a">({{item.duration}}m)</view> <van-icon class="z" name="clock" color="#16c7ae" size="36rpx" /><image class="del" src="../../images/del.png" wx:if="{{power_arr.code10604.has||power_arr.code10607.has}}" catchtap="del"></image>
            </view>
            <view class="text_li">
              <image src="../../images/4.png"></image>
              {{item.name}}
            </view>
            <view class="text_li">
              <image src="../../images/3.png"></image>
              {{item.items}}
            </view>
            <view class="text_li">
              <image src="../../images/1.png"></image>
              {{item.doctorname}}
            </view>
            <view class="bz text_li">
              <image src="../../images/2.png"></image>
              {{item.remark}}
              <view class="f30" wx:if="{{item.remark!=''}}">{{item.remark}}</view>
              <view class="f30 bz_text" wx:if="{{item.remark==''}}">请添加预约备忘</view>
            </view>
          </view>
        </view>
        <view class="wu" wx:if="{{order_arr.length==0||(!power_arr.code10602.has||!power_arr.code10605.has)}}">
          <image src="../../images/none.png"></image>
          暂无数据
        </view>
    </view>
    <view wx:if="{{title=='预约'}}">
        <view class="li_box" data-item="{{item}}" bindtap="detailsgo" wx:for="{{order_arr}}" wx:if="{{power_arr.code10602.has||power_arr.code10605.has}}">
          <view class="date_time">{{item.scheduletime}}</view>
          <view class="li">
            <image class="stateimg" wx:if="{{item.visitstatus!='1'}}" src="../../images/details_disposal_icon_boththe.png"></image>
