/* pages/S_invoice/index.wxss */
.S_invoice {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 106rpx 0rpx;
  box-sizing: border-box;
  /* background-color: red; */
}
.box {
  width: 100%;
  display: flex;
  justify-content: center;
}
.btn {
  width: 100%;
  line-height: 76rpx;
  display: flex;
  justify-content: center;
  background-color: #0094ff;
  color: #fff;
}
.bottom {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}
.li {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2;
}
.li .title {
  width: 240rpx;
}
.li .text {
  flex: 1;
  display: flex;
}
.li .box view {
  margin-top: 20rpx;
  width: 40%;
  line-height: 66rpx;
  text-align: center;
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  border: 1rpx solid #000;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.li .box .check {
  border-color: red;
}
.li input {
  flex: 1;
} 
.mt{
  margin-top: 60rpx;
}
van-radio-group {
  display: flex;
}
van-radio {
  margin-right: 20rpx;
}