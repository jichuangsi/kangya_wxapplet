<view class="medical">
  <!-- <view class="top">
    <van-nav-bar title="{{title}}" left-text="返回" left-arrow bind:click-left="onClickLeft" bind:click-right="onClickRight">
      <van-icon name="plus" slot="right" size="36rpx" />
    </van-nav-bar>
  </view> -->
  <view class="top_right" bindtap="onClickRight">
    <van-icon name="plus" size="36rpx" />
  </view>
  <view class="center">
    <view class="li" wx:for="{{arr}}">
      <view class="li_top">
        <image src="../../images/my_headportrait_male.png"></image>
        <view class="name">{{item.doctor_name}}</view>
        <view class="time">{{item.time}}</view>
      </view>
      <view class="user">
        <view>患者姓名</view>
        <view>{{item.patient_name}}</view>
        <view>性别</view>
        <view>{{item.sex==0?'男':'女'}}</view>
      </view>
      <view class="tab" wx:for="{{item.medical_arr}}">
        <view class="left">{{item.title}}</view>
        <view class="right" wx:if="{{item.text != '影像'}}">{{item.text}}</view>
        <view class="right" wx:if="{{item.text == '影像'}}">{{item.text}}<van-icon name="arrow" /></view>
      </view>
      <view class="user">
        <view bindtap="edit"><van-icon name="edit" />编辑</view>
        <view bindtap="del"><van-icon name="close" />删除</view>
        <view><van-icon name="records" />签名</view>
      </view>
    </view>
  </view>
  <van-dialog id="van-dialog" />
</view>
