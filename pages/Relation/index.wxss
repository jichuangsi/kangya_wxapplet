/* pages/Relation/index.wxss */
.Relation {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 20rpx;
  box-sizing: border-box;
}
.center .box {
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 20rpx solid #f2f2f2;
}
.center .box image {
  width: 120rpx;
  height: 120rpx;
}
.center .box .text {
  color: #ccc;
  font-size: 28rpx;
  line-height: 46rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.center .box .text1 {
  font-size: 32rpx;
}