/* pages/Management/index.wxss */
.Management {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  /* margin-bottom: 100rpx; */
  background-color: #fff;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2;
}
.li .img {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}
.li .name {
  margin-right: 20rpx;
}
.li .state {
  font-size: 28rpx;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  color: #16c7ae;
  border: 1rpx solid #16c7ae;
}
.li .time {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}
.li .title {
  width: 100%;
  margin-bottom: 20rpx;
}
.li .text {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.li .money {
  display: flex;
}
.li .money view {
  color: #16c7ae;
  margin-right: 20rpx;
}
.li .bz {
  width: 100%;
  font-size: 26rpx;
}
.li .btn {
  width: 50%;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.li .btn .van-icon {
  margin-right: 20rpx;
}