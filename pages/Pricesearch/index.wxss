/* pages/Pricesearch/index.wxss */
.top {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background-color: #16c7ae;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.top .ipt {
  flex: 1;
  display: flex;
  background-color: #fff;
  border-radius: 5rpx;
  height: 60rpx;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
  margin-right: 10rpx;
}
.top .ipt input{
  flex: 1;
  height: 100%;
  padding: 0rpx 10rpx;
  color: #333;
  box-sizing: border-box;
}
.center .list {
  width: 100%;
  height: 110rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #f2f2f2;
}
.center .list .title {
  font-size: 36rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.center .list .text {
  font-size: 30rpx;
  color: #999;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.center .list .money {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #16c7ae;
  font-size: 32rpx;
}