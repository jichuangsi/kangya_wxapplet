/* pages/Login/index.wxss */
.top {
  width: 100%;
  height: 348rpx;
  background-color:#16c7ae;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top image{
  width: 210rpx;
  height: 210rpx;
}
.center {
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}
.center .ipt {
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
  padding: 20rpx 0rpx;
  align-items: center;
}
.center .ipt image {
  width: 34rpx;
  max-height: 44rpx;
  margin-right: 20rpx;
}
.center .ipt input {
  flex: 1;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}
.right {
  color: #999;
  border-radius: 46rpx;
  line-height: 46rpx;
  border: 1rpx solid #999;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
}
.green {
  color: #16c7ae;
  border-radius: 46rpx;
  line-height: 46rpx;
  border: 1rpx solid #16c7ae;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
}
.btn {
  width: 100%;
  line-height: 86rpx;
  text-align: center;
  background-color: #16c7ae;
  color: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.tab {
  color: #878787;
  margin: 60rpx 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.nav {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #878787;
  margin: 60rpx 0rpx;
}
.nav .text {
  margin: 0rpx 20rpx;
}
.nav .xian {
  width: 186rpx;
  height: 2rpx;
  background-color: #f2f2f2;
}
.check_nav {
  display: flex;
  justify-content: center;
  margin: 0rpx 40rpx;
}
.check_nav image{
  width: 108rpx;
  height: 108rpx;
  margin: 0rpx 20rpx;
}
.xy {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  margin: 40rpx 0rpx;
  font-size: 26rpx;
}
.xy view {
  color: #16c7ae;
}