/* pages/information/index.wxss */
.information {
  width: 100%;
  padding-top: 86rpx;
}
.top {
  width: 100%;
  height: 86rpx;
  padding-top: 10rpx;
  background-color: #16c7ae;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
}
.top van-icon {
  position: absolute;
  right: 20rpx;
  color: #fff;
  font-size: 46rpx;
  top:50%;
  transform: translateY(-50%);
}
.top .first {
  right: 80rpx;
}
.top .left {
  position: absolute;
  left: 20rpx;
  color: #fff;
  font-size: 46rpx;
  top:50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  vertical-align: middle;
}
.top .left van-icon {
  position: relative;
  transform: translateY(0%);
  right: 0%;
  top: 0rpx;
  vertical-align: middle;
}
.top .title {
  width: 284rpx;
  height: 64rpx;
  background-color: #03b29c;
  border-radius: 64rpx;
  margin: 0 auto;
  padding-top: 10rpx;
  overflow: hidden;
  position: relative;
}
.top .title .bj {
  position: absolute;
  top: 0rpx;
  height: 100%;
  width: 50%;
  border-radius: 64rpx;
  background-color: #fff;
}
.top .title .left {
  left: 0rpx;
}
.top .title .right {
  right: 0rpx;
}
.top .title .text {
  width: 100%;
  display: flex;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
}
.top .title .text view {
  flex:1;
  line-height: 64rpx;
  text-align: center;
  color: #fff;
}
.top .title .text .check {
  color: #17cab0;
}
van-popup view {
  padding: 5rpx 10rpx;
}
van-popup .check {
  color: #16c7ae;
}
.center {
}
.center .li {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.center .li image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.center .li .right {
  flex: 1;
  max-width: 600rpx;
  min-height: 110rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.center .li .right .title{
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
}
.center .li .right .title .time {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}
.center .li .right .text{
  justify-content: space-between;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.center .ipt {
  width: 100%;
  height: 80rpx;
  border: 10rpx solid #f2f2f2;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.friend_box .li {
  align-items: center;
}
.friend_box .li .right {
  min-height: auto;
  border: none;
}