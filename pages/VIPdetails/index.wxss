/* pages/VIPdetails/index.wxss */
.xian{
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.box {
  display: flex;
  flex-wrap: wrap;
}
.box .box_li {
  width: 50%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.box .box_li image {
  width: 66rpx;
  height: 66rpx;
}
.box .box_li .message {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}
.text_box {
  padding: 20rpx;
  box-sizing: border-box;
}
.text_box .h3 {
  font-size: 36rpx;
  line-height: 48rpx;
}
.text_box .yh {
  border: 1rpx solid #f2f2f2;
  display: flex;
  margin-top: 20rpx;
}
.text_box .yh .left {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.text_box .yh .right {
  flex: 1;
  display: flex;
  /* align-items: center; */
  /* justify-content: center; */
  padding: 20rpx;
  box-sizing: border-box;
  flex-direction: column;
  border-left: 1rpx solid #f2f2f2;
}
.text_box .yh .right view:last-child{
  color: #999;
}
.text_box .p {
  line-height: 56rpx;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
}
.record_li {
  padding: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
}
.record_li .left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.record_li .left view:last-child {
  color: #999;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.record_li .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.record_li .right view {
  display: flex;
  margin-right: 10rpx;
}
.red {
  color: red;
}
.patient_li {
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}
.patient_li image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}