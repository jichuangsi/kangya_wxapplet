/* pages/coursedetails/index.wxss */
.van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.van-nav-bar__title {
  color: #fff !important;
}
.van-nav-bar__text {
  color: #fff !important;
}
van-icon {
  vertical-align: middle !important;
}
.van-nav-bar__arrow {
  color: #fff !important;
}
.van-nav-bar .van-icon {
  color: #fff !important;
}
.van-nav-bar__right {
  height: 100%;
}
button {
  width: 60rpx !important;
  height: 100%;
  background-color: transparent;
}
.h3_box {
  padding: 0rpx 30rpx;
}
.top_right {
  background-color: rgba(0, 0, 0, 0.4);
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  border-radius: 10rpx;
}
.center {

}
.img_box {
  width: 100%;
  height:600rpx; 
  overflow: hidden;
  position: relative;
  background-color: #fff;
}
.center image {
  width: 100%;
}
.img_box image {
  max-height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.center .title {
  font-size: 36rpx;
  line-height: 56rpx;
  font-weight: 600;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.center .text {
  font-size: 24rpx;
  line-height: 46rpx;
  color: #999;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e7eceb;
  vertical-align: middle;
}
.center .text image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.center .text .textstate{
  float: right;
  display: flex;
  vertical-align: middle;
}
.p1 {
  font-size: 30rpx;
  color: #16c7ae;
}
.p2 {
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}
.p3 {
  font-size: 26rpx;
  color: #e88070;
}
.p4 {
  font-size: 26rpx;
  color: #666;
}
.center .box {
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.center .h3 {
  font-size: 34rpx;
  font-weight: 600;
  border-left: 5rpx solid #c55856;
  padding-left: 10rpx;
}
.center .box .text {
  border: none;
  margin-bottom: 20rpx;
  padding: 0rpx;
}
.xian {
  width: 100%;
  height: 24rpx;
  background-color: #f0f0f0;
}
.list {
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  padding-bottom: 30rpx;
}
.list .smallbox {
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.list .smallbox .left {
  width: 328rpx;
  height: 188rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: top;
  position: relative;
}
.list .smallbox .left image {
  max-width: 100%;
  max-height: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.list .smallbox .right {
  width: 348rpx;
  display: inline-block;
}
.list .smallbox .right .smallboxtitle {
  font-size: 36rpx;
  line-height: 56rpx;
  font-weight: 600;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .smallbox .right .smallboxtext {
  font-size: 26rpx;
  line-height: 46rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.list .smallbox .right .money {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  display: flex;
}
.btn {
  width: 100%;
  display: flex;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #fff;
  font-weight: 600;
}
.btn .left {
  width: 40%;
  height: 100%;
}
.btn .right {
  flex: 1;
  background-color: red;
  color: #fff;
  height: 100%;
}