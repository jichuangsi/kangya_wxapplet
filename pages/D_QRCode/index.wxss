/* pages/D_QRCode/index.wxss */
.D_QRCode {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 9;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  background-color: #f2f2f2;
}
.imgbox {
  width: 500rpx;
  height: 500rpx;
  position: relative;
  margin: 30rpx auto;
}
.imgbox image {
  width: 60%;
  height: 60%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.imgbox .decorate {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  transform: translate(0%,0%);
}
canvas {
  width: 800rpx;
  height: 800rpx;
  opacity: 0;
  position: absolute;
  left: 100%;
  top: 0rpx;
}