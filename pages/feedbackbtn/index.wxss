.ipt {
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 56rpx;
  border-bottom: 20rpx solid #f2f2f2;
}
.ipt .title {
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.ipt .text{
  color: #c9c9c9;
  margin-bottom: 20rpx;
}
.ipt .check_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.ipt .check_box view {
  border: 1rpx solid #f2f2f2;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.ipt .check_box .check{
  color: #16c7ae;
  border-color: #16c7ae;
}
.ipt textarea {
  width: 100%;
}
.ipt input {
  text-align: right;
}
.ipt .img {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.ipt .img .img_add {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border: 1rpx solid #f2f2f2;
  font-size: 60rpx;
  margin-right: 20rpx;
}
.ipt .img .img_box {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border: 1rpx solid #f2f2f2;
  margin-right: 20rpx;
  position: relative;
}
.ipt .img .img_box .none {
  background-color: red;
  line-height: normal;
  color: #fff;
  border-radius: 50%;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  padding: 5rpx 10rpx;
}
.ipt .img .img_box image {
  max-width: 100%;
  max-height: 100%;
}

.userimg {
  text-align: center;
