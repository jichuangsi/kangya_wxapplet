/* pages/Patientlist/index.wxss */
.Patientlist {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.top .nav {
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
}
.top .nav view {
  flex: 1;
  display: flex;
  justify-content: center;
  background-color: #fff;
  padding: 10rpx 0rpx;
  box-sizing: border-box;
}
van-popup view {
  line-height: 56rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.top_right {
  position: fixed;
  bottom: 10rpx;
  right: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  border-radius: 10rpx;
}
.top_right .first_icon {
  margin-right: 20rpx;
}
.center {
  padding: 100rpx 0rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.li_box {
  border-bottom: 1rpx solid #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box;
}
.li_box .title {
  display: flex;
}
.li_box .title .text {
  flex: 1;
  margin-left: 20rpx;
}
.li_box .title .num {
  color: #16c7ae;
}
.li_box .li {
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.li_box .li image {
  width: 86rpx;
  height: 86rpx;
}
.li_box .li .right_li {
  flex: 1;
  margin-left: 20rpx;
}
.li_box .li .right_li .right_li_top {
  display: flex;
  justify-content: space-between;
}
.li_box .li .right_li .right_li_bottom {
  display: flex;
  justify-content: space-between;
  color: #999;
}
.li_box .li .right_li .state {
  padding: 5rpx 15rpx;
  background-color: #16c7ae;
  color: #fff;
  box-sizing: border-box;
  border-radius: 20rpx;
}