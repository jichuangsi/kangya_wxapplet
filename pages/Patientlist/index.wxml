<!--pages/Patientlist/index.wxml-->
<view class="Patientlist">
  <view class="top">
    <!-- <van-nav-bar title="{{title}}" left-text="返回" left-arrow bind:click-left="onClickLeft">
    <van-icon name="search" slot="right" catchtap="searchgo" size="34rpx"/>
    <van-icon name="plus" slot="right" catchtap="addgo"  size="34rpx"/>
    </van-nav-bar> -->
    <view class="top_right">
      <van-icon class="first_icon" name="search" catchtap="searchgo" size="34rpx"/>
      <van-icon name="plus" catchtap="addgo"  size="34rpx"/>
    </view>
    <view class="nav">
      <view data-index="1" bindtap="showPopup">{{nav1}}<van-icon name="arrow-down" /></view>
      <view data-index="2" bindtap="showPopup">{{nav2}}<van-icon name="arrow-down" /></view>
      <view data-index="3" bindtap="showPopup">{{nav3}}<van-icon name="arrow-down" /></view>
      <view data-index="4"bindtap="showPopup">{{nav4}}<van-icon name="arrow-down" /></view>
    </view>
  </view>
  <view class="center">
    <view class="li_box" data-index="{{first_index+1}}" bindtap="li_box_click" wx:for="{{Patientlist_arr}}" wx:for-index="first_index">
      <view class="title">
        <van-icon name="arrow" />
        <view class="text">{{item.title}}</view>
        <view class="num">{{item.num}}人</view>
      </view>
      <view class="li" wx:for="{{item.child}}" wx:if="{{li_num==first_index+1}}" data-name="{{item.name}}" bindtap="Patientclick">
        <image src="../../images/clinic_colleagues_headportrait_male.png" wx:if="{{item.sex == 0}}"></image>
        <image src="../../images/clinic_colleagues_headportrait_female.png" wx:if="{{item.sex == 1}}"></image>
        <view class="right_li">
          <view class="right_li_top">
            <view>{{item.name}}</view>
            <view class="state">{{item.Matter}}</view>
          </view>
          <view class="right_li_bottom">
            <view>{{item.postion}}</view>
            <view class="time">{{item.time}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <van-popup show="{{ show }}"
  position="top"
  bindtap="onClose">
    <view wx:for="{{nav1_arr}}" wx:if="{{nav_num == 1}}" data-text="{{item}}" bindtap="nav1click">{{item}}</view>
    <view wx:for="{{nav2_arr}}" wx:if="{{nav_num == 2}}" data-text="{{item}}" bindtap="nav2click">{{item}}</view>
    <view wx:for="{{nav3_arr}}" wx:if="{{nav_num == 3}}" data-text="{{item}}" bindtap="nav3click">{{item}}</view>
    <view wx:for="{{nav4_arr}}" wx:if="{{nav_num == 4}}" data-text="{{item}}" bindtap="nav4click">{{item}}</view>
  </van-popup>
</view>