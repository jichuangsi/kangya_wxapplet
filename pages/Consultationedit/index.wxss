  border: 20rpx solid #fff;
  background-color: #e71919;
  box-sizing: border-box;
}
.btn view {
  flex: 1;
  height: 100%;
  line-height: 86rpx;
  text-align: center;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.green {
  background-color: #16c7ae;
}
.audiobox {
  margin: 10rpx 0rpx;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.audio {
  background-color: #f8f8f8;
  border: 1rpx solid #ebebeb;
  padding: 10rpx;
  padding-right: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}
.audio:active{
  background-color: #c6c6c6;
}