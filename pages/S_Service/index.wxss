/* pages/S_Service/index.wxss */
.S_Service {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}
.center_top {
  width: 100%;
  height: 106rpx;
  background-color: #0094ff;
  color: #fff;
  display: flex;
  align-items: center;
  text-indent: 40rpx;
}
.wl {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  background-color: rgb(216, 216, 252);
}
.white {
  background-color: #fff;
}
.wl .text {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  line-height: 46rpx;
}
.wl .text .time {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.fb {
  display: flex;
  justify-content: flex-end;
}
.mini {
  padding: 5rpx 10rpx;
  border: 1rpx solid #c3c3c3;
  font-size: 26rpx;
}
.box {
  margin-top: 20rpx;
  background-color: #fff;
}
.li {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  font-size: 28rpx;
}
.li_list {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fff;
}
van-card {
  width: 100%;
}
.right {
  justify-content: flex-end;
  border: none;
}
.right view {
  padding: 2rpx 10rpx;
  border: 1rpx solid #333;
  margin-left: 20rpx;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.bottom {
  position: fixed;
  bottom: 0rpx;
  left: 0rox;
}
.li input {
  flex: 1;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}
.li .s {
  display: flex;
  align-items: center;
}
.btn {
  border: 20rpx solid #f2f2f2;
  background-color: #fa5151;
  color: #fff;
  box-sizing: border-box;
  margin-top: 40rpx;
  text-align: center;
  line-height: 76rpx;
}
.ipt {
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 56rpx;
  border-bottom: 20rpx solid #f2f2f2;
}
.ipt .title {
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.ipt .text{
  color: #c9c9c9;
  margin-bottom: 20rpx;
}
.ipt .check_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.ipt .check_box view {
  border: 1rpx solid #f2f2f2;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.ipt .check_box .check{
  color: #16c7ae;
  border-color: #16c7ae;
}
.ipt textarea {
  width: 100%;
}
.ipt input {
  text-align: right;
}
.ipt .img {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.ipt .img .img_add {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border: 1rpx solid #f2f2f2;
  font-size: 60rpx;
  margin-right: 20rpx;
}
.ipt .img .img_box {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border: 1rpx solid #f2f2f2;
  margin-right: 20rpx;
  position: relative;
}
.ipt .img .img_box .none {
  background-color: #fa5151;
  line-height: normal;
  color: #fff;
  border-radius: 50%;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  padding: 5rpx 10rpx;
}
.ipt .img .img_box image {
  max-width: 100%;
  max-height: 100%;
}
.userimg {
  text-align: center;
  font-size: 34rpx;
  line-height: 86rpx;
}
.userimg view {
  border-bottom: 1rpx solid #f2f2f2;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}