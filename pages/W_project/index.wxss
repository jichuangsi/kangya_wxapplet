/* pages/W_project/index.wxss */
.W_project {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}
.center .li {
  width: 45%;
  padding: 20rpx;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 46rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.center .li image {
  width: 100%;
  height: 106rpx;
  background-color: #16c7ae;
  margin-bottom: 20rpx;
}
.center .li .money {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #0094ff;
}
.center .li .btn {
  width: 100%;
  text-align: center;
  line-height: 66rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: #16c7ae;
  border-radius: 10rpx;
}