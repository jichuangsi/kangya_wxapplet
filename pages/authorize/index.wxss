/* pages/authorize/index.wxss */
.authorize {
  width: 100%;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}
image {
  width: 66rpx;
  height: 66rpx;
  background-color: #0094ff;
  margin-right: 20rpx;
}
.title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.blod {
  font-size: 46rpx;
  line-height: 56rpx;
  margin-top: 30rpx;
  margin-bottom: 70rpx;
  /* font-weight: 600;
  letter-spacing: 2rpx; */
}
.li {
  display: flex;
  align-items: flex-start;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.text {
  margin-left: 20rpx;
}
.btn {
  margin-top: 300rpx;
}
.btn button {
  width: 322rpx;
}
.cancel {
  color: #00AAA4;
}
.confirm {
  background-color: #00AAA4;
  margin-bottom: 25rpx;
  color: #fff;
}
.user {
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
  margin-top: 40rpx;
  padding: 10rpx 0rpx;
  box-sizing: border-box;
}
.l {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.r view {
  color: #bababa;
  font-size: 30rpx;
}