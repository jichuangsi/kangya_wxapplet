/* pages/authorize/index.wxss */
.authorize {
  width: 100%;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}
.box {
  width: 100%;
  position: fixed;
  top: 50%;
  left:   10rpx;
  transform: translateY(-50%);
  padding: 20rpx;
  box-sizing: border-box;
}
.xian {
  width: 100%;
  height: 2rpx;
  background-color: #bababa;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.text {
  line-height: 56rpx;
  font-size: 34rpx;
  letter-spacing: 5rpx;
  font-weight: 600;
  /* text-align: center; */
}
.btn {
  width: 100%;
  display: flex;
  margin-top: 40rpx;
  box-sizing: border-box;
}
.btn button {
  border-radius: 50rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
  color: #fff;
}
.cancel {
  background-color: #999;
}
.confirm {
  background-color: #00AAA4;
}
.zc {
  line-height: 40rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #bababa;
  text-indent: 2em;
}