/* pages/study/index.wxss */
.study {
  width: 100%;
  padding-top: 86rpx;
}
.top {
  width: 100%;
  height: 86rpx;
  padding-top: 10rpx;
  background-color: #16c7ae;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 999;
}
.top van-icon {
  position: absolute;
  right: 20rpx;
  color: #fff;
  font-size: 46rpx;
  top:50%;
  transform: translateY(-50%);
}
.top .title {
  width: 284rpx;
  height: 64rpx;
  background-color: #03b29c;
  border-radius: 64rpx;
  margin: 0 auto;
  padding-top: 10rpx;
  overflow: hidden;
  position: relative;
}
.top .title .bj {
  position: absolute;
  top: 0rpx;
  height: 100%;
  width: 50%;
  border-radius: 64rpx;
  background-color: #fff;
}
.top .title .left {
  left: 0rpx;
}
.top .title .right {
  right: 0rpx;
}
.top .title .text {
  width: 100%;
  display: flex;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
}
.top .title .text view {
  flex:1;
  line-height: 64rpx;
  text-align: center;
  color: #fff;
}
.top .title .text .check {
  color: #17cab0;
}
van-grid .van-grid-item__icon {
  font-size: 80rpx !important;
}