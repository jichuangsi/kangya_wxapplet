/* pages/S_seckill/index.wxss */
.S_seckill {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 100rpx 20rpx;
  box-sizing: border-box;
  /* background-color: #fff; */
}
.nav {
  width: 100%;
  background-color: red;
  height: 240rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 0rpx 0rpx 120rpx 120rpx;
  margin-top: 68rpx;
}
.nav .nav_li {
  flex: 1;
  height: 86rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  margin-top: 40rpx;
}
.timebox{
  width: 80%;
  height: 120rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: -180rpx;
}
.time_li {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: red;
}
.libox {
  width: 100%;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  margin-top: 60rpx;
}
.li {
  width: 48%;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.li_one {
  width: 100%;
}
.li_one navigator {
  display: flex;
  justify-content: space-between;
}

.li_one navigator .right {
  width: 500rpx;
  margin-left: 20rpx;
}
.li image{
  display: block;
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.li .text {
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.li .money {
  /* display: flex;
  align-items: center; */
}
.li .money .new {
  color: red;
}
.li .money .old {
  color: #999;
  margin-left: 20rpx;
  font-size: 26rpx;
  text-decoration:line-through;
}
.li .btn {
  padding: 5rpx 10rpx;
  background-color: red;
  color: #fff;
  position: absolute;
  bottom:20rpx;
  right:20rpx;
}
.li .hui {
  background-color: #c3c3c3;
}