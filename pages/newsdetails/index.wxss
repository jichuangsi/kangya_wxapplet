.center {
  padding: 10rpx;
  box-sizing: border-box;
}
.center .user {
  width: 100%;
  color: #999;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.center .user .userimg {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.center .user .userimg image {
  width: 100%;
  height: 100%;
}
.center .user .username {
  flex: 1;
}
.center .user .username name {
  color: #333;
}
.center .user .state {
  display: flex;
  align-items: center;
}
.center .user .van-icon {
  font-size: 30rpx;
  margin: 0 10rpx;
}
.center .title {
  font-size: 30rpx;
  line-height: 46rpx;
  margin-bottom: 10rpx;
}
.center .text {
  font-size: 28rpx;
  line-height: 46rpx;
  margin-bottom: 10rpx;
  text-indent: 2em;
}
.center image {
  width: 100%;
}
rich-text view {
  line-height: 46rpx;
}