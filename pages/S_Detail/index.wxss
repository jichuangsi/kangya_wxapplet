/* pages/S_Detail/index.wxss */
.S_index {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  padding: 100rpx 0rpx;
  box-sizing: border-box;
  padding-top: 0rpx;
  /* background-color: #fff; */
}
swiper{
  width: 100%;
  height: 400rpx;
  background-color: #01c7b5;
  color: #e7eceb;
  font-size: 32rpx;
}
.li {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: flex-start;
  border-bottom: 1rpx solid #f2f2f2;
}
.li .text {
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.li .money {
  display: flex;
  align-items: center;
}
.li .money .new {
  color: red;
}
.li .money .old {
  color: #999;
  margin-left: 20rpx;
  font-size: 26rpx;
  text-decoration:line-through;
}

.nav_title {
  width: 100%;
  display: flex;
  padding: 20rpx 60rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.nav_title view {
  display: flex;
  align-items: center;
}
.nav_title view .van-icon {
  margin-right: 10rpx;
  color: red;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.bottom {
  display: flex;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 100rpx;
  width: 100%;
  font-size: 28rpx;
}
.bottom view {
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.red1 {
  flex: 1;
  background-color: rgba(255, 0, 0, 0.767);
  color: #fff;
}
.red {
  flex: 1;
  background-color: red;
  color: #fff;
}
.text_box {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}
van-tab {
  line-height: 56rpx;
}
van-tab image {
  width: 100%;
}
.yh {
  padding: 100rpx 20rpx;
  box-sizing: border-box;
  background-color: #f2f2f2;
  height: 100%;
  position: relative;
}
.yh_title {
  margin-bottom: 20rpx;
}
.yh .yh_li {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
}
.yh .yh_li .left {
  border-right: 1rpx solid #f2f2f2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.yh .yh_li .left view {
  font-size: 28rpx;
}
.yh .yh_li .left view:first-child{
  color: rgba(255, 0, 0, 0.815);
  font-size: 60rpx;
  display: flex;
  align-items: flex-end;
}
.yh .yh_li .left view:first-child view {
  font-size: 26rpx;
}
.yh .yh_li .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.yh .yh_li .right .right_top {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.yh .yh_li .right .right_top .state {
  padding: 2rpx 10rpx;
  background-color: pink;
  color: red;
}
.yh .yh_li .right .right_bottom {
  font-size: 26rpx;
  margin-top: 40rpx;
}
.yh .yh_li .right .right_state {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 46rpx;
  background-color: #0094ff;
  color: #fff;
}
.yh_btn {
  width: 80%;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  color: #fff;
  background-color: red;
  border-radius: 66rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.gg .li image{
  width: 160rpx;
  height: 160rpx;
  background-color: #0094ff;
}
.gg .li .left {
  width: 70%;
  margin-left: 20rpx;
}
.gg .li .left .text {
  -webkit-line-clamp: 5;
}
.gg_li {
  padding: 5rpx 10rpx;
  background-color: #f2f2f2;
  margin-bottom: 20rpx;
  display: inline-block;
}
.check_gg {
  background-color: #fff;
  color: red;
  border: 1rpx solid red;
}
.gg {
  width: 100%;
  height: 100%;
  position: relative;
}
.gg_li_box {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}
.gg_num {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}
.gg_num .gg_num_title {
  flex: 1;
}
.gg_num .num {
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.gg_btn {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: space-between;
  height: 126rpx;
}
.gg_btn view {
  width: 45%;
  height: 100%;
  text-align: center;
  line-height: 86rpx;
  color: #fff;
}
.box_pt {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.pt {
  display: flex;
  color: #fff;
}
.pt .left {
  flex: 1;
  background-color: red;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
.pt .right {
  width: 180rpx;
  background-color: pink;
  text-align: center;
  line-height: 126rpx;
  color: red;
}
.pt .money {
  display: flex;
  align-items: center;
}
.pt .money .new {
  color: #fff;
}
.pt .money .old {
  color: #999;
  margin-left: 20rpx;
  font-size: 26rpx;
  text-decoration:line-through;
}
.pt .left_bottom {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.pt .left_bottom view:first-child {
  border: 1rpx solid #fff;
  margin-right: 20rpx;
  padding: 2rpx 5rpx;
  box-sizing: border-box;
}
.qg {
  display: flex;
  color: #fff;
}
.qg .left {
  flex: 1;
  background-color: red;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
.qg .right {
  width: 280rpx;
  background-color: pink;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  color: red;
  align-items: center;
}
.qg .money .new {
  color: #fff;
}
.qg .money .old {
  color: #999;
  margin-left: 20rpx;
  font-size: 26rpx;
  text-decoration:line-through;
}