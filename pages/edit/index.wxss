/* pages/edit/index.wxss */
.edit {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  box-sizing: border-box;
}
input{
  background-color: #fff;
  width: 100%;
  height: 86rpx;
  line-height: 66rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
textarea {
  background-color: #fff;
  width: 100%;
  height: 386rpx;
  line-height: 46rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.li {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.box {
  background-color: #c6c6c6;
  border-radius: 50%;
  color: #fff;
  padding: 5rpx 10rpx;
}
.checkbox {
  background-color: #16c7ae;
}
.smallbox {
  width: 16%;
  text-align: center;
  margin-bottom: 20rpx;
}
.yy_text {
  width: 100%;
  margin: 40rpx auto;
  text-align: center;
}
.yuyinBtn {
  border-radius: 50%;
  width: 130rpx;
  height: 130rpx;
  display: block;
  margin-top: 40rpx;
  background-color: #fff;
  margin: 40rpx auto;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
  box-shadow:2px 2px 5px rgba(0, 0, 0, 0.4);
}
.yuyinBtn:active {
  background-color: #999;
  box-shadow:inset 2px 2px 5px rgba(0, 0, 0, 0.4);
}
.yuyinBtn image {
  width: 56rpx;
  height: 66rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.btn {
  width: 100%;
  line-height: 86rpx;
  text-align: center;
  background-color: #16c7ae;
  color: #fff;
  margin-top: 60rpx;
}
.top_right {
  padding: 20rpx;
  box-sizing: border-box;
  position: fixed;
  top: 10rpx;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 10rpx;
  color: #fff;
}
.img_box {
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx;
}
.imgbox {
  width: 222rpx;
  height: 164rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.imgbox:nth-child(3n){
  margin-right: 0rpx;
}
.imgbox image {
  width: 222rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  /* min-height:100%; */
  max-height:150%;
}
.imgbox .imgstate {
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  font-size: 24rpx;
  color: #fff;
  padding-left: 60rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  line-height: 36rpx;
  background: -webkit-linear-gradient(left,transparent,rgba(255, 255, 255, 0),#eeca95);
}
.imgbox .hui {
  background: -webkit-linear-gradient(left,transparent,rgba(255, 255, 255, 0),#828282);
}
.imgbox .green {
  background: -webkit-linear-gradient(left,transparent,rgba(255, 255, 255, 0),#3db8a3);
}
.imgbox .van-icon {
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}
.wu {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 30rpx;
  margin-top: 60rpx;
}
.wu image {
  width: 213rpx;
  height: 170rpx;
}