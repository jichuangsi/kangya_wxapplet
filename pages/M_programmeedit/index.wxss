/* pages/M_programmeedit/index.wxss */
.M_programmeedit {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  background-color: #fff;
}
.li .text {
  flex: 1;
}
.li input {
  flex: 1;
  padding: 0rpx 20rpx;
}
.li .num_box {
  display: flex;
  align-items: center;
}
.li .num_box view {
  margin-left: 20rpx;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.li textarea {
  width: 100%;
  height: 300rpx;
  text-indent: 2em;
}
.btn {
  margin-top: 20rpx;
  width: 100%;
  color: #fff;
  background-color: #16c7ae;
  line-height: 86rpx;
  text-align: center;
}