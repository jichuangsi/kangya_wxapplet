/* pages/Videoplay/index.wxss */
.van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.van-nav-bar__title {
  color: #fff !important;
}
.van-nav-bar__text {
  color: #fff !important;
}
van-icon {
  vertical-align: middle !important;
}
.van-nav-bar__arrow {
  color: #fff !important;
}
.van-nav-bar .van-icon {
  color: #fff !important;
}
.van-nav-bar__right {
  height: 100%;
}
van-sidebar {
  height: 100vh;
  overflow: auto;
}
#myVideo {
  width: 100%;
  height: 460rpx;
}
.center {
  width: 100%;
  position: relative;
}
.center .center_top {
  width: 100%;
  position: fixed;
  top: 540rpx;
  left: 0rpx;
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
  z-index: 9;
}
.center .center_top .title {
  flex: 1;
  text-align: center;
}
.center_bottom {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
  opacity: 0.9;
  z-index: 9;
}
.center_bottom input {
  flex: 1;
  background-color: #c9c9c9;
  line-height: 66rpx;
  height: 66rpx;
  padding: 0rpx 10rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
}
.center_bottom .btn {
  background-color: #0094ff;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  color: #fff;
  border-radius: 2rpx;
}
.center_center {
  width: 100%;
  height: 50vh;
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 100rpx 20rpx;
  overflow: auto;
}
.center_center .li {
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}
.center_center .li .user_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.center_center .li .user_img image {
  width: 100%;
  height: 100%;
}
.center_center .li .user_text {
  flex: 1;
  margin-left: 20rpx;
  line-height: 46rpx;
  font-size: 28rpx;
}
.center_center .li .user_text .text{
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: inline-block;
  position: relative;
  margin-top: 20rpx;
  border-radius: 5rpx;
}
.center_center .li .user_text .text image {
  max-width: 50%;
}
.center_center .li .user_text .text .dian {
  border: 20rpx solid #fff;
  border-color: #fff #fff transparent transparent;
  position: absolute;
  top: 20rpx;
  left: -20rpx;
}
.pop_top {
  display: flex;
  justify-content: space-between;
  width: 100%;
  line-height: 66rpx;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box;
}
van-popup .center_center {
  padding: 20rpx;
  padding-bottom: 100rpx;
  background-color: #fff;
}
van-popup .center_center .li {
  border-bottom: 1rpx solid #f2f2f2;
}
van-popup .center_center .li .user_text .text{
  background-color: transparent;
  margin-top: 0rpx;
}
van-popup .center_center .li .user_text .user_name {
  display: flex;
  justify-content: space-between;
  width: 100;
}