/* pages/studynav/index.wxss */

van-popup view {
  padding: 5rpx 10rpx;
}
van-popup .check {
  color: #16c7ae;
}
.van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.van-nav-bar__title {
  color: #fff !important;
}
.van-nav-bar__text {
  color: #fff !important;
}
van-icon {
  vertical-align: middle !important;
}
.van-nav-bar__arrow {
  color: #fff !important;
}
.van-nav-bar .van-icon {
  color: #fff !important;
}
.van-nav-bar__right {
  height: 100%;
}
button {
  margin: 0;
  width: 100% !important;
}
.studynav {
  height: 100%;
}
.studynav .list {
  margin-bottom: 20rpx;
}
.studynav .list .smallbox{
  width: 100%;
  border-radius: 5rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  position: relative;
}
.studynav .list .smallbox .left {
  display: inline-block;
  vertical-align: top;
}
.studynav .list .smallbox .left image {
  width: 288rpx;
  height: 188rpx;
  display: inline-block;
  vertical-align: top;
}
.studynav .list .smallbox .right {
  width: 388rpx;
  margin-left: 10rpx;
  display: inline-block;
  vertical-align: top;
}
.studynav .list .smallbox .right .smallboxtitle {
  font-size: 36rpx;
  line-height: 56rpx;
  font-weight: 600;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.studynav .list .smallbox .right .smallboxtext {
  font-size: 26rpx;
  line-height: 46rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.studynav .list .smallbox .right .money {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  display: flex;
}
.p1 {
  font-size: 30rpx;
  color: #16c7ae;
}
.p2 {
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}
.p3 {
  font-size: 26rpx;
  color: #e88070;
}
.p4 {
  font-size: 24rpx;
  color: #999;
}
.lecturer {
  padding: 10rpx;
  box-sizing: border-box;
  background-color: pink;
}
.lecturer .addbox {
  border-top: 60rpx solid blue;
  background-color: #fff;
  padding: 10rpx 20rpx;
}
.lecturer .addbox .addtitle {
  font-size: 36rpx;
  margin-bottom: 30rpx;
}
.lecturer .addbox .ipt .iptname{
  display: inline-block;
}
.lecturer .addbox .ipt .iptname view{
  color: red;
  display: inline-block;
}
.lecturer .addbox .ipt input{
  border: 1rpx solid #999;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
}
.lecturer .addbox .ipt van-checkbox view {
  margin: 10rpx 0rpx;
}
.lecturer .addbox .ipt van-checkbox .van-checkbox__icon-wrap {
  margin-right: 10rpx;
}
.datanone {
  text-align: center;
  color: #bababa;
  line-height: 56rpx;
  margin-top: 20rpx;
}