/* pages/Colleaguedetails/index.wxss */
.Colleaguedetails {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {

}
.center .center_top {
  background-color: #16c7ae;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 56rpx;
  color: #fff;
}
.center .center_top image {
  width: 160rpx;
  height: 160rpx;
}
.center .li {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.btn {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: center;
  background-color: #fff;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.center .center_bottom {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  box-sizing: border-box;
  display: flex;
  background-color: #fff;
}
.center .center_center {
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.center .center_bottom view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 86rpx;
}
.center .center_bottom view van-icon {
  margin-right: 10rpx;
}
.imgbox {
  width: 500rpx;
  height: 500rpx;
  position: relative;
  margin: 30rpx auto;
}
.imgbox image {
  width: 60%;
  height: 60%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.imgbox .decorate {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  transform: translate(0%,0%);
}
.van-dialog__button {
  flex: none;
  width: 100%;
}