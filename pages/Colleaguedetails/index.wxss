/* pages/Colleaguedetails/index.wxss */
.Colleaguedetails {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {

}
.center .center_top {
  background-color: #16c7ae;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 56rpx;
  color: #fff;
}
.center .center_top image {
  width: 160rpx;
  height: 160rpx;
}
.center .li {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.btn {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: center;
  background-color: #fff;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}