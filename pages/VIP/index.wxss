/* pages/VIP/index.wxss */
.VIP {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  /* padding: 20rpx; */
  box-sizing: border-box;
}
.li {
  width: 100%;
  height: 246rpx;
  /* padding: 20rpx; */
  box-sizing: border-box;
  /* background-position: -20rpx -20rpx; */
  /* background-color: orange; */
  
  /* border-radius: 10px; */
  color: #fff;
  margin-bottom: 20rpx;
  position: relative;
}
.li .bjimg {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
}
.li .li_top {
  width: 100%;
  display: flex;
  position: absolute;
  left: 0rpx;
  top: 40rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.li .li_top image {
  width: 66rpx;
  height: 66rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.li .li_top .user {
  flex: 1;
}
.li .li_top .message{
  text-align: right;
}
.li .li_bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: absolute;
  left: 0rpx;
  bottom: 20rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.li .li_bottom view {
  display: flex;
  align-items: center;
}
.li .li_bottom view image {
  width: 36rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.wu {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 30rpx;
  margin-top: 60rpx;
}
.wu image {
  width: 213rpx;
  height: 170rpx;
}