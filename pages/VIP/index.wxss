/* pages/VIP/index.wxss */
.VIP {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: orange;
  border-radius: 10px;
  color: #fff;
  margin-bottom: 20rpx;
}
.li .li_top {
  display: flex;
}
.li .li_top image {
  width: 66rpx;
  height: 66rpx;
  margin-right: 10rpx;
}
.li .li_top .user {
  flex: 1;
}
.li .li_top .message{
  text-align: right;
}
.li .li_bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}