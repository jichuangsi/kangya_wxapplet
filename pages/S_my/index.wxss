/* pages/S_my/index.wxss */
.S_my {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.ipt {
  width: 100%;
  height: 96rpx;
  border: 20rpx solid #fff;
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 10rpx;
  color: #c9c9c9;
  font-size: 24rpx;
}
.ipt .van-icon {
  margin-right: 20rpx;
  color: #333;
}
.center {
  padding:0rpx 0rpx 150rpx 0rpx;
  box-sizing: border-box;
}
.center_top {
  background-color: #00aaa4;
  padding: 40rpx;
  padding-bottom: 100rpx;
  display: flex;
  align-items: center;
  color: #fff;
}
.center_top image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.center_top .user {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.center_top .user .name{
  font-size: 38rpx;
  line-height: 46rpx;
  margin-bottom: 10rpx;
}
.box {
  width: 98%;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
}
.box .box_top {
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}
.box .box_top .left {
  flex: 1;
}
.box .box_bottom{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.box .box_bottom .box_li {
  flex: 1;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}
.box .box_bottom .box_li view:first-child {
  margin-bottom: 20rpx;
}
.box .box_bottom .box_li:first-child{
  border-right: 1rpx solid #f2f2f2;
}
.mt {
  margin-top: -60rpx;
}
van-grid {
  width: 100%;
}
van-grid text {
  font-size: 28rpx;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}