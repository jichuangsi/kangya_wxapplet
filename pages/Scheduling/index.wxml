<!--pages/Scheduling/index.wxml-->
<view class="Scheduling">
  <view class="top">
    <van-nav-bar title="{{title}}" left-text="返回" left-arrow bind:click-left="onClickLeft" bind:click-right="onClickRight">
    <van-icon name="setting-o"slot="right" size="36rpx" />
    </van-nav-bar>
  </view>
  <view class="center">
    <view class="center_top">
      <view class="left">
        <view class="time">
          <view>月份</view>
          <view>3</view>
        </view>
      </view>
      <view class="right">
        <view class="time" wx:for="{{time_arr}}">
          <view>{{item.week}}</view>
          <view>{{item.date}}</view>
        </view>
      </view>
    </view>
    <view class="center_bottom" wx:for="{{r_arr}}">
      <view class="left">
        <view class="time">
          <view>{{item.name}}</view>
        </view>
      </view>
      <view class="right">
        <view class="time" wx:for="{{item.child}}">
          <view wx:if="{{item.state}}"></view>
        </view>
      </view>
    </view>
  </view>
</view>
