/* pages/Arrears/index.wxss */
.Arrears {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.top .nav {
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
}
.top .nav view {
  flex: 1;
  display: flex;
  justify-content: center;
  background-color: #fff;
  padding: 10rpx 0rpx;
  box-sizing: border-box;
}
van-popup view {
  line-height: 56rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.center {
  padding: 100rpx 0rpx;
  box-sizing: border-box;
}
.li {
  display: flex;
  justify-content: space-between;
  line-height: 56rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #fff;
}
.li .left view:first-child {
  font-size: 40rpx;
}
.li .right {
  text-align: right;
}
.li .right view:first-child {
  color: #16c7ae;
}