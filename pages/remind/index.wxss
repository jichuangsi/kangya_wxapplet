/* pages/remind/index.wxss */
.remind {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
  overflow-y: auto;
  background-color: #f2f2f2;
}
.remind .libox {
  padding: 20rpx 0px;
}
.remind .libox .time {
  margin: 20rpx auto;
  display: flex;
  justify-content: center;
}
.remind .libox .time view {
  padding: 10rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  background-color: #666;
  color: #fff;
}
.remind .libox .li {
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.remind .libox .li image {
  width: 100%;
}
.remind .libox .li .title {
  line-height: 46rpx;
}
.remind .libox .li .text {
  line-height: 46rpx;
  color: #666;
  border-bottom: 1rpx solid #f2f2f2;
}
.remind .libox .li .go {
  display: flex;
  justify-content: space-between;
  line-height: 46rpx;
}
.green {
  color: green;
}