.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.center {
  /* padding-top: 100rpx; */
  box-sizing: border-box;
  background-color: #fff;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.center .center_top {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid #f2f2f2;
}
.center .center_top .user_box {
  display: flex;
  align-items: center;
}
.center .center_top .user_box image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.center .center_top .user_box .user {
  flex: 1;
}
.box {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
}
.box .text {
  flex: 1;
  margin-left: 20rpx;
}
.boxli {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.boxli .time{
  font-size: 56rpx;
  line-height: 76rpx;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.box_li {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.box_li view {
  margin-left: 20rpx;
  border: 1rpx solid #16c7ae;
  color: #16c7ae;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-radius: 46rpx;
}
.bz {
  padding: 20rpx;
  box-sizing: border-box;
}
.center_bottom {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 76rpx;
  background-color: #fff;
}
.center_bottom view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn {
  width: 100%;
  line-height: 86rpx;
  text-align: center;
  background-color: rgb(221, 20, 20);
  color: #fff;
  margin-top: 20rpx;
}