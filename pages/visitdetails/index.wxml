      <view>已回访</view>
    </view>
    <view class="xian"></view>
    <view class="box">
      <van-icon name="notes-o" />
      <view class="text">回访内容</view>
    </view>
      <view class="bz">治疗一周后回访</view>
    <view class="xian"></view>
    <view class="box">
      <van-icon name="notes-o" />
      <view class="text">回访结果</view>
    </view>
      <view class="bz">未填写</view>
      <view class="center_bottom">
        <view bindtap="chatgo"><van-icon name="comment-o" />通知患者</view>
        <view bindtap="iphoneclick"><van-icon name="phone-o" />打电话</view>
        <view bindtap="editgo"><van-icon name="edit" />修改回访</view>
      </view>
  </view>
  <van-dialog id="van-dialog" />
