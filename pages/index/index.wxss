/**index.wxss**/
.index {
  padding-bottom: 100rpx;
}
.namebox {
  width: 100%;
  height: 100rpx;
  padding: 20rpx 36rpx 20rpx 34rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.namebox van-image {
  width: 68rpx;
  height: 68rpx;
}
.namebox .name {
  font-size: 44rpx;
  margin-left: 20rpx;
  flex: 1;
  color: #01c7b5;
}
.namebox van-icon {
  font-size: 42rpx;
  color: #01c7b5;
}
swiper{
  width: 100%;
  height: 400rpx;
  background-color: #01c7b5;
  color: #e7eceb;
  font-size: 32rpx;
}
.itembox {
  position: relative;
}
.itembox .title {
  position: absolute;
  left: 36rpx;
  top: 38rpx;
}
.itembox .detail {
  position: absolute;
  right: 24rpx;
  top: 38rpx;
  vertical-align: middle;
}
.itembox .detail van-icon {
  vertical-align: middle;
  font-size: 42rpx;
}
.itembox .ipt {
  position: absolute;
  left: 36rpx;
  top: 86rpx;
  display: flex;
}
.itembox .ipt .text {
  width: auto;
  font-size: 38rpx;
  margin-right: 20rpx;
}
van-popup {
  line-height: 42px;
}
van-grid .van-grid-item__icon {
  font-size: 66rpx;
}
.nav {
  width: 100%;
  display: flex;
  border-bottom: 20rpx solid #f2f2f2;
  margin: 10rpx 0rpx;
}
.nav .li {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  color: #999;
  border-right: 1rpx solid #f2f2f2;
  line-height: 56rpx;
}
.nav .li .num {
  color: #01c7b5;
}
.van-cell {
  font-size: 40rpx !important;
}
van-cell .van-icon {
  font-size: 40rpx !important;
  color: #01c7b5;
}
.showli {
  
}
.showli view {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  white-space: nowrap;
  align-items: center;
}
.showli view image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.Hospital_li {
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}