<!--pages/Colleague/index.wxml-->
<view class="Colleague">
  <!-- <view class="top">
    <van-nav-bar title="{{title}}" left-text="返回" left-arrow bind:click-left="onClickLeft">
    </van-nav-bar>
  </view> -->
  <view class="center">
    <view class="ipt" bindtap="searchgo">
      <van-icon name="search" size="36rpx" />
      搜索
    </view>
      <van-index-bar scroll-top="{{ scrollTop }}">
        <view wx:for="{{project_list}}">
          <van-index-anchor index="{{item.index}}" />
          <van-cell>
            <view class="li" wx:for="{{item.child}}" data-id="{{item.id}}" data-name="{{item.name}}" catchtap="detailsgo">
              <image src="{{item.img}}" wx:if="{{item.img !=''}}"></image>
              <image src="../../images/clinic_colleagues_headportrait_male.png" wx:if="{{item.img ==''&&item.sex==0}}"></image>
              <image src="../../images/clinic_colleagues_headportrait_female.png" wx:if="{{item.img ==''&&item.sex==1}}"></image>
            <view class="user" use-slot>
              <view class="name">{{item.name}}</view>
              <view>{{item.position}}</view>
            </view>
            </view>
          </van-cell>
        </view>
      </van-index-bar>
  </view>
</view>
