swiper {
  height: 400rpx;
}
swiper-item navigator{
  width: 100%;
  height: 100%;
  position: relative;
}
swiper-item image {
  max-height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.van-grid-item__icon {
  font-size: 160rpx !important;
}
.solt {
  width: 100%;
  height: 100%;
  background-color: #fff;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #666;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 54rpx;
  border: none;
}
.solt image {
  width: 164rpx;
  height: 164rpx;
}
.solt view {
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}
.solt::after {
  border: none;
}
