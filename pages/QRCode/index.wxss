/* pages/QRCode/index.wxss */
.QRCode {
  width: 100%;
  height: 100vh;
  background-color: #333;
}
.van-nav-bar {
  vertical-align: middle !important;
  background-color: #000 !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.van-nav-bar__title {
  color: #fff !important;
}
.van-nav-bar__text {
  color: #fff !important;
}
van-icon {
  vertical-align: middle !important;
}
.van-nav-bar__arrow {
  color: #fff !important;
}
.van-nav-bar .van-icon {
  color: #fff !important;
}
.van-nav-bar__right {
  height: 100%;
}
.center {
  background-color: #fff;
  width: 90%;
  height: 70%;
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin: 15% auto;
}
.center .title {
  display: flex;
}
.center .title image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.center .title .text {
  color: #999;
}
.center .title .text .name {
  height: 46rpx;
}
.center .Code {
  width: 60%;
  height: 70%;
  display: block;
  margin: 15% auto;
}