/* pages/QRCode/index.wxss */
.QRCode {
  width: 100%;
  height: 100vh;
  background-color: #333;
}
.van-nav-bar {
  vertical-align: middle !important;
  background-color: #000 !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.van-nav-bar__title {
  color: #fff !important;
}
.van-nav-bar__text {
  color: #fff !important;
}
van-icon {
  vertical-align: middle !important;
}
.van-nav-bar__arrow {
  color: #fff !important;
}
.van-nav-bar .van-icon {
  color: #fff !important;
}
.van-nav-bar__right {
  height: 100%;
}
.center {
  background-color: #fff;
  width: 90%;
  height: 70%;
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: absolute;
  left: 5%;
  top: 15%;
}
.center .title {
  display: flex;
}
.center .title image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.center .title .text {
  color: #999;
}
.center .title .text .name {
  height: 46rpx;
}
.center .Code {
  width: 60%;
  height: 70%;
  display: block;
  margin: 15% auto;
}
canvas {
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.user_box {
  display: flex;
  align-items: center;
}
.user_box image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.user_box .user {
  flex: 1;
}
.user_box .user .name {
  display: flex;
  flex-direction: column;
}
.user_box .user .name image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 5rpx;
  margin-right: 0rpx;
  border-radius: none;
}