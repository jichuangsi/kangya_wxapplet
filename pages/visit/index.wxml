<!--pages/visit/index.wxml-->
<view class="visit">
  <!-- <view class="top">
    <van-nav-bar title="{{title}}" left-text="返回" left-arrow bind:click-left="onClickLeft" bind:click-right="onClickRight">
    <van-icon name="calender-o" slot="right" size="36rpx" wx:if="{{state==0}}" />
    <van-icon name="plus" slot="right" size="36rpx" wx:if="{{state!=0}}" />
    </van-nav-bar>
  </view> -->
  <view class="top_right" bindtap="onClickRight">
    <van-icon name="calender-o" size="36rpx" wx:if="{{state==0}}" />
    <van-icon name="plus" size="36rpx" wx:if="{{state!=0}}" />
  </view>
  <view class="center">
    <view wx:if="{{state==0}}">
      <view class="li_box">
            <view class="li" bindtap="detailsgo" data-item="{{item}}" wx:for="{{visit_arr}}">
              <view class="li_top">
                <view class="li_left">
                  <image src="../../images/my_headportrait_male.png" wx:if="{{item.sex == '男'}}"></image>
                  <image src="../../images/my_headportrait_female.png" wx:if="{{item.sex == '女'}}"></image>
                  <view class="libox">
                    <view>患者姓名</view>
                    <view>{{item.customername}}</view>
                  </view>
                  <view class="libox">
                    <view>回访人</view>
                    <view>{{item.visdocname}}</view>
                  </view>
                  <view class="libox">
                    <view>回访日期</view>
                    <view class="time">{{item.returndate}}</view>
                  </view>
                </view>
                <image class="del" src="../../images/del.png" catchtap="del"></image>
                <image class="stateimg" src="../../images/details_returnvisit_icon_did notreturn.png" wx:if="{{item.state==3||item.returnresult==3}}"></image>
                <image class="stateimg" src="../../images/hf.png" wx:if="{{item.state==4||item.returnresult==4}}"></image>
              </view>
              <view class="green ret">{{item.record}}</view>
              <view class="f30" wx-if="{{item.remark!=''}}">
                <image src="../../images/zd.png"></image>
                <view>{{item.remark}}</view>
                <image src="../../images/yd.png"></image>
              </view>
              <view class="bz f30" wx-if="{{item.remark==''}}">点击添加回访结果</view>
            </view>
          </view>
          <view class="bottom">
            <view data-index="1" bindtap="numshow">{{state2}}<van-icon name="arrow-down" /></view>
            <view data-index="2" bindtap="numshow">{{state3}}<van-icon name="arrow-down" /></view>
            <view class="green" bindtap="addgo"><van-icon name="plus" />添加</view>
            <view class="green" bindtap="searchgo"><van-icon name="search" />搜索</view> 
          </view>
    </view>
    <view wx:if="{{state==1}}">
      <view class="li_box">
            <view class="li" bindtap="detailsgo" data-item="{{item}}" wx:for="{{visit_arr}}">
              <view class="li_top">
                <view class="li_left">
                  <image src="{{patdetails.picture}}" wx:if="{{patdetails.picture!=''}}"></image>
                  <image src="../../images/my_headportrait_male.png" wx:if="{{patdetails.sex == '男'&&patdetails.picture==''}}"></image>
                  <image src="../../images/my_headportrait_female.png" wx:if="{{patdetails.sex == '女'&&patdetails.picture==''}}"></image>
                  <view class="libox">
                    <view>患者姓名</view>
                    <view>{{patdetails.name}}</view>
                  </view>
                  <view class="libox">
                    <view>回访人</view>
                    <view>{{item.visdocname}}</view>
                  </view>
                  <view class="libox">
                    <view>回访日期</view>
                    <view class="time">{{item.returndate}}</view>
                  </view>
                </view>
                <image class="del" src="../../images/del.png" catchtap="del"></image>
                <image class="stateimg" src="../../images/details_returnvisit_icon_did notreturn.png" wx:if="{{item.state=='3'}}"></image>
                <image class="stateimg" src="../../images/hf.png" wx:if="{{item.state=='4'}}"></image>
              </view>
              <view class="green ret">{{item.retvisititem}}</view>
              <view class="f30" wx-if="{{item.remark!=''}}">
                <image src="../../images/zd.png"></image>
                <view>{{item.remark}}</view>
                <image src="../../images/yd.png"></image>
              </view>
              <view class="bz f30" wx-if="{{item.remark==''}}">点击添加回访结果</view>
            </view>
          </view>
    </view>
  </view>
  <van-popup show="{{ show }}" bind:close="onClose"
  position="top"
  custom-style="widht: 100%">
    <calendar calendarConfig="{{calendarConfig}}" bind:afterTapDay="afterTapDay"></calendar>
  </van-popup>
  <van-popup show="{{ showbottom }}" bind:close="onClosebottom"
  position="bottom"
  custom-style="widht: 100%">
  <view class="popupbox" wx:if="{{num == 1}}">
    <view catchtap="numclick1" data-text="全部">全部</view>
    <view catchtap="numclick1" data-text="已预约">已预约</view>
    <view catchtap="numclick1" data-text="已确认">已确认</view>
    <view catchtap="numclick1" data-text="已送达">已送达</view>
    <view catchtap="numclick1" data-text="已流失">已流失</view>
  </view>
  <view class="popupbox" wx:if="{{num == 2}}">
    <view catchtap="numclick2" data-text="全部">全部</view>
    <view catchtap="numclick2" data-text="李青青">李青青</view>
    <view catchtap="numclick2" data-text="李医生">李医生</view>
    <view catchtap="numclick2" data-text="莫医生">莫医生</view>
  </view>
  </van-popup>
  <van-dialog id="van-dialog" />
</view>
