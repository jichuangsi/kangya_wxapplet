<!--pages/Mydataedit/index.wxml-->
<view class="Mydataedit">
  <view class="top">
    <van-nav-bar title="{{title}}" left-text="返回" left-arrow bind:click-left="onClickLeft"
      bind:click-right="onClickRight"  >
      <view slot="right" wx:if="{{title!='选择职称'}}">确定</view>
    </van-nav-bar>
  </view>
  <view class="center">
    <input value="{{name}}" placeholder="请输入内容" maxlength="32" wx:if="{{title == '设置姓名'}}"></input>
    <input value="{{sex}}" placeholder="请输入您的年龄" maxlength="3" wx:if="{{title == '设置年龄'}}"></input>
    <textarea value="{{autograph}}" placeholder="请输入内容" maxlength="150" wx:if="{{title == '编辑个性签名'}}"></textarea>
    <textarea value="{{curriculum}}" placeholder="请输入内容" maxlength="150" wx:if="{{title == '编辑从医履历'}}"></textarea>
    <view class="project" wx:if="{{title == '添加项目'}}">
      <van-index-bar scroll-top="{{ scrollTop }}">
        <view wx:for="{{project_list}}">
          <van-index-anchor index="{{item.index}}" />
          <van-cell title="文本" >
            <view data-index="{{index}}" class="{{item.state ==1?'check right':'right'}}" bindtap="checkclick">
              <van-icon name="success" color="#fff" />
            </view>
          </van-cell>
        </view>
      </van-index-bar>
    </view>
    <view class="positional" wx:if="{{title == '选择职称'}}">
      <view class="li" wx:for="{{positional_arr}}" data-index="{{index}}" bindtap="positional_click">
        <view class="{{positional_index == index?'text':''}}">
          {{item}}
        </view>
        <van-icon name="arrow" />
      </view>
    </view>
  </view>
</view>
