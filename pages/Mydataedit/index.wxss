/* pages/Mydataedit/index.wxss */
.Mydataedit {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.van-nav-bar__title {
  color: #fff !important;
}
.van-nav-bar__text {
  color: #fff !important;
}
van-icon {
  vertical-align: middle !important;
}
.van-nav-bar__arrow {
  color: #fff !important;
}
.van-nav-bar .van-icon {
  color: #fff !important;
}
.van-nav-bar__right {
  height: 100%;
}
van-sidebar {
  height: 100vh;
  overflow: auto;
}
van-cell .right {
  background-color: #999;
  border-radius: 50%;
  display: inline-block;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}
van-cell .check {
  background-color: #16c7ae;
}
.center{
  padding-bottom: 100rpx;
}
.center input{
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  line-height: 56rpx;
  height: 86rpx;
  background-color: #fff;
}
.center textarea{
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  line-height: 56rpx;
  height: 360rpx;
  background-color: #fff;
}
.positional {
  background-color: #fff;
}
.positional .li {
  font-size: 34rpx;
  line-height: 56rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}
.positional .li .text{
  color: #16c7ae;
}
.btn {
  line-height: 86rpx;
  width: 100%;
  background-color: #16c7ae;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}
.li_xm {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.li_xm .box {
  background-color: #c6c6c6;
  border-radius: 50%;
  color: #fff;
  padding: 5rpx 10rpx;
}
.li_xm .checkbox {
  background-color: #16c7ae;
}