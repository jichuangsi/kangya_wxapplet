/* pages/S_index/index.wxss */
.S_index {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  overflow-y: auto;
  overflow-x: hidden;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.ipt {
  width: 100%;
  height: 96rpx;
  border: 20rpx solid #fff;
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 10rpx;
  color: #c9c9c9;
  font-size: 24rpx;
}
.ipt .van-icon {
  margin-right: 20rpx;
  color: #333;
}
.center {
  padding: 150rpx 20rpx;
  box-sizing: border-box;
  padding-top: 80rpx;
  /* background-color: #fff; */
}
swiper{
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  color: #e7eceb;
  font-size: 32rpx;
}
swiper swiper-item .top_img {
  /* width: 100%; */
  height: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.nav_title {
  width: 100%;
  display: flex;
  padding: 20rpx 60rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.nav_title view {
  display: flex;
  align-items: center;
}
.nav_title view .van-icon {
  margin-right: 10rpx;
  color: red;
}
.activity {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  /* flex-wrap: wrap;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx; */
}
.activity .activity_li {
  width: 49%;
  height: 120rpx;
  background-color: #01c7b5;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.assemble {
  width: 100%;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  background-color: pink;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.assemble .assemble_title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin-bottom: 20rpx;
}
.assemble .assemble_title view {
  color: red;
}
.assemble .assemble_title .van-icon {
  color: #333;
}
.assemble .assemble_title navigator {
  display: flex;
  align-content: center;
}
.assemble_li {
  width: 30%;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.assemble_li image{
  /* width: 100%; */
  display: block;
  margin: 0 auto;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.assemble_li .text {
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.assemble_li .money {
  display: block;
  align-items: center;
}
.assemble_li .money .new {
  color: red;
  margin-right: 20rpx;
}
.assemble_li .money .old {
  color: #999;
  font-size: 26rpx;
  text-decoration:line-through;
}
