}
.assemble {
  width: 100%;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  /* background-color: pink; */
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.assemble .assemble_title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin-bottom: 20rpx;
}
.assemble .assemble_title view {
  color: #08080c;
  font-size: 47rpx;
}
.assemble .assemble_title .van-icon {
  color: #333;
}
.assemble .assemble_title navigator {
  display: flex;
  align-content: center;
}
.assemble_li {
  width: 48.5%;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.assemble_li image{
  /* width: 100%; */
  display: block;
  margin: 0 auto;
  height: 280rpx;
  margin-bottom: 20rpx;
}
.assemble_li .text {
  color: #383838;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.assemble_li .money {
  display: flex;
  align-items: center;
}
.assemble_li .money .new {
  font-weight: 600;
  color: #fc3533;
  font-size: 32rpx;
  margin-right: 20rpx;
}
.assemble_li .money .old {
  color: #999;
  font-size: 26rpx;
  text-decoration:line-through;
}
