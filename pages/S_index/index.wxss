/* pages/S_index/index.wxss */
.S_index {
  width: 100%;
  height: 100vh;
  background-color: #f5f5f5;
  overflow-y: auto;
  overflow-x: hidden;
}
.top {
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  background-color: #16c7ae;
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.ipt {
  width: 100%;
  height: 96rpx;
  border: 20rpx solid #fff;
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 10rpx;
  color: #c9c9c9;
  font-size: 24rpx;
}
.ipt .van-icon {
  margin-right: 20rpx;
  color: #333;
}
.center {
  padding: 150rpx 20rpx;
  box-sizing: border-box;
  padding-top: 80rpx;
  /* background-color: #fff; */
}
swiper{
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  color: #e7eceb;
  font-size: 32rpx;
}
swiper swiper-item .top_img {
  /* width: 100%; */
  height: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.nav_title {
  width: 100%;
  display: flex;
  padding: 20rpx 100rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  color: #999;
}
.nav_title view {
  display: flex;
  align-items: center;
}
.nav_title view .van-icon {
  margin-right: 10rpx;
  color: red;
}
.activity {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  /* justify-content: space-between;
  margin-bottom: 20rpx; */
}
.activity_ul {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  border-radius: 20rpx;
  border: 1rpx solid #bababa;
  overflow: hidden;
}
.activity_title {
  font-size: 47rpx;
  color: #08080c;
  margin-bottom: 20rpx;
}
.activity .imgbox {
  width: 33%;
  height: 120rpx;
}
.activity .activity_li {
  width: 20%;
