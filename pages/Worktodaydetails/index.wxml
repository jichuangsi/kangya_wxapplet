<!--pages/Worktodaydetails/index.wxml-->
<view class="Worktodaydetails">
  <!-- <view class="top">
    <van-nav-bar title="{{title}}" left-text="返回" left-arrow bind:click-left="onClickLeft">
    </van-nav-bar>
  </view> -->
  <scroll-view scroll-y="true" style="height: 100vh;" bindscrolltolower="uptouch">
    <view class="center">
        <view class="li_box">
          <view class="li" wx:for="{{arr}}">
            <image src="{{item.img}}" wx:if="{{item.img != ''}}"></image>
            <image src="../../images/clinic_colleagues_headportrait_male.png" wx:if="{{item.img == ''&&item.sex ==0}}"></image>
            <image src="../../images/clinic_colleagues_headportrait_female.png" wx:if="{{item.img == ''&&item.sex ==1}}"></image>
            <view class="right_li">
              <view class="right_li_top">
                <view>{{item.name}}</view>
                <view class="state">{{item.postion}}</view>
              </view>
              <view class="right_li_bottom">
                <view>{{item.postion}}</view>
                <view class="time">{{item.time}}</view>
              </view>
            </view>
          </view>
        </view>
    </view>
  </scroll-view>
</view>