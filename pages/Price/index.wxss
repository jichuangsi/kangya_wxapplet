/* pages/Price/index.wxss */
.li {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  flex-wrap: wrap;
}
.li view {
  color: #666;
}
.li .text {
  flex: 1;
  color: #000;
}
.li .van-icon {
  color: #333;
}
.li view:last-child {
  margin-left: 20rpx;
}
.xian {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
.bz {
  width: 100%;
}
.box {
  width: 100%;
  background-color: #f2f2f2;
  display: flex;
  flex-wrap: wrap;
}
.box view {
  padding: 20rpx;
  box-sizing: border-box;
  text-align: center;
  width: 25%;
  border: 1rpx solid #999;
}
.box view:nth-child(2n){
  background-color: #fff;
}
.li .green {
  color: #16c7ae;
}
.li .orange {
  color: orange;
}