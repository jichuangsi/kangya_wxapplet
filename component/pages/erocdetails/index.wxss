/* pages/erocdetails/index.wxss */
.erocdetails {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  /* overflow-y: scroll; */
}
.top {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9;
  width: 100%;
  
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.van-grid-item__icon {
  font-size: 80rpx !important;
}
.center {
  box-sizing: border-box;
}
.time {
  line-height: 66rpx;
  font-size: 34rpx;
  text-align: center;
}
.box {
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 20rpx solid #f2f2f2;
  line-height: 46rpx;
}
.box .boxcenter{
  line-height: 76rpx;
  font-size: 36rpx;
}
.box .boxbottom{
  color: #999;
}
.h3 {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  font-size: 32rpx;
  align-items: center;
  background-color: #fff;
}
.h3 image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.libox {
  border-bottom: 20rpx solid #f2f2f2;
}
.li {
  padding: 20rpx;
  box-sizing: border-box;
  color: #999;
  line-height: 46rpx;
  min-height: 200rpx;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #fff;
}
.top_li {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  color: #333;
}
.top_li view:first-child {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  border: 1rpx solid #16c7ae;
  color: #16c7ae;
  margin-right: 20rpx;
  text-align: center;
}
.top_li .top_text{
  flex: 1;
  text-align: right;
}
.center_top {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.center_top .left {
  width: 200rpx;
  display: flex;
  background-color: #fff;
  margin-right: 20rpx;
}
.center_top .left view {
  flex: 1;
  border: 1rpx solid #f2f2f2;
  text-align: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.center_top .left .check {
  background-color: #16c7ae;
  color: #fff;
}
.center_top .right {
  flex: 1;
  border: 1rpx solid #c6c6c6;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
}
.jznav {
  background-color: #fff;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
}
.jznav .nav_li {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #daa520;
  border-right: 1rpx solid #f2f2f2;
}
.jznav .nav_li:first-child {
  color: #d87093;
}
.jznav .nav_li:last-child {
  color: greenyellow;
  border: none;
}
.libox {
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.libox .libox_title {
  font-size: 28rpx;
  display: flex;
}
.libox .libox_title view {
  margin-right: 20rpx;
}
.canvas_box {
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  position: relative;
}
.canvas {
    width: 600rpx;
    height: 600rpx;
}
.title{
  
}
.popup_title {
  padding: 20rpx;
  box-sizing: border-box;
}
.popup_box {
  overflow-x: auto;
  margin-top: 40rpx;
  height: 80%;
  position: relative;
  overflow-y: auto;
}
.popup_box .list_li {
  /* width: 1400rpx; */
  height: 56rpx;
  display: flex;
}
.popup_box .list_li:first-child view{
  background-color: #f2f2f2;
}
.popup_box .list_li view {
  /* flex: 1; */
  min-width: 300rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  white-space:nowrap;
  border-right: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}
.popup_box .list_li view:last-child{
  border-right: none;
}
.all {
  width: 100%;
  background-color: #f2f2f2;
  position: fixed;
  bottom: 20rpx;
  left: 0rpx;
  height: 56rpx;
  line-height: 56rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
ec-canvas {
  width: 100%;
  height: 100%;
  position: relative;
}
.month {
  width: 100%;
  height: 100vh;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}
.month .year {
  width: 100%;
  display: flex;
  justify-content: space-between;
  line-height: 83rpx;
  color: #737373;
}
.month .now {
  padding: 0rpx 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.month .month_box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.month .month_box .month_li {
  width: 25%;
  height: 148rpx;
  box-sizing: border-box;
  border: 1rpx solid #eeeeee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.month .month_box .c_m {
  background-color: #ebf7f4;
  color: #45a89e;
}
.month .month_box .c_t_m {
  background-color: #45a89e;
  color: #fff;
}
.month .btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.month .btn view {
  line-height: 66rpx;
  text-align: center;
  color: #fff;
  background-color: #16c7ae;
  padding: 0rpx 40rpx;
  font-size: 30rpx;
}
.month .btn view:last-child {
  color: orange;
  border: 1rpx solid orange;
  margin-left: 20rpx;
  background-color: rgba(193, 132, 1, 0.2);
}
.popup_nav {
  display: flex;
}
.popup_nav view {
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid transparent;
}
.popup_nav .check_popup_nav {
  border-bottom: 1rpx solid #16c7ae;
}
.none_box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0%;
  top: 0%;
}
.none_box image {
  width: 292rpx;
  height: 236rpx;
}
.none_box .text{
  font-size: 26rpx;
  color: #999;
}

.none_box_h3 {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.none_box_h3 image {
  width: 146rpx;
  height: 118rpx;
}
.none_box_h3 .text{
  font-size: 26rpx;
  color: #999;
}