/* pages/medical/index.wxss */
.medical {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  /* overflow-y: auto; */
}
.top .van-nav-bar {
  vertical-align: middle !important;
  background-color: #16c7ae !important;
  color: #fff !important;
  padding-top: 0px !important;
}
.top .van-nav-bar__title {
  color: #fff !important;
}
.top .van-nav-bar__text {
  color: #fff !important;
}
.top van-icon {
  vertical-align: middle !important;
}
.top .van-nav-bar__arrow {
  color: #fff !important;
}
.top .van-nav-bar .van-icon {
  color: #fff !important;
}
.top .van-nav-bar__right {
  height: 100%;
}
.top van-sidebar {
  height: 100vh;
  overflow: auto;
}
.top_right {
  padding: 20rpx;
  position: fixed;
  right: 10rpx;
  top: 10rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  border-radius: 10rpx;
  z-index: 9;
}
.center {
  margin-bottom: 100rpx;
  /* background-color: #fff; */
}
.li {
  /* margin-bottom: 20rpx; */
  background-color: #fff;
  border-bottom: 20rpx solid #f2f2f2;
  box-sizing: border-box;
  position: relative;
}
.li_top {
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.li_top image {
  width: 65rpx;
  height: 65rpx;
}
.li_top .name {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.li_top .state {
  padding: 5rpx 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: #df9827;
  color: #fff;
  margin-right: 20rpx;
}
.user {
  display: flex;
}
.user view {
  flex: 1;
  text-align: center;
  border-left: 1rpx solid #f2f2f2;
  line-height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user view .van-icon {
  margin-right: 20rpx;
}
.user view:first-child{
  border: none;
}
.tab {
  border: 1rpx solid #f2f2f2;
  display: flex;
  flex-wrap: wrap;
  line-height: 46rpx;
}
.tab .left {
  width: 140rpx;
  border-right: 1rpx solid #f2f2f2;
  text-align: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.tab .w50 {
  width: 50%;
  text-align: left;
}
.tab .right {
  flex: 1;
  padding: 10rpx 20rpx;
  color: #666;
}
.tab_state {
  display: flex;
  justify-content: center;
  align-items: center;
}
.red {
  background-color: red;
}
.yellow {
  background-color: yellow;
}
.van-dialog__button {
  flex: none;
  width: 50%;
}
.change_box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}
.change_box .tooth {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.change_box .tooth view {
  width: 50%;
  padding: 5rpx;
  height: 46rpx;
  line-height: 46rpx;
  box-sizing: border-box;
  text-align: center;
}
.change_box .tooth view:nth-child(1){
  border-bottom: 1rpx solid #f2f2f2;
  border-right: 1rpx solid #f2f2f2;
}
.change_box .tooth view:nth-child(4){
  border-top: 1rpx solid #f2f2f2;
  border-left: 1rpx solid #f2f2f2;
}
.change_box .bz {
  width: 100%;
  padding: 10rpx 5rpx;
  line-height: 46rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f2f2f2;
}
.wu {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 30rpx;
  margin-top: 60rpx;
}
.wu image {
  width: 213rpx;
  height: 170rpx;
}
.imgbox {
  flex: 1;
  display: flex;
  height: 60rpx;
  justify-content: flex-end;
}
.imgbox image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.check_medical {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  z-index: 9;
}
.medical_box {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  background-color: rgba(0, 0, 0, 0.4)
}
.medical_btn {
  width: 100%;
  line-height: 88rpx;
  background-color: #16c7ae;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}
.canvas_box {
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  position: relative;
}
ec-canvas {
  width: 100%;
  height: 100%;
  position: relative;
}
.gl {
  width: 100%;
  text-align: center;
  margin: 20rpx;
  font-size: 30rpx;
}
.hui {
  color: #999;
}